                                    Margin="122,1,0,0" 
                                    VerticalAlignment="Top"
                                    Width="23" 
                                    Height="23" 
                                    Cursor="Hand"
                                    ToolTip="Revert to Auto"
                                    Click="buttonFFprobeAuto_Click"
                                    Style="{DynamicResource ButtonFolderCustom}" Grid.Column="2" Grid.Row="1" >
                                <Image Width="9" 
                                       Height="11" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" 
