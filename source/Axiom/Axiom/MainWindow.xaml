<Window x:Class="Axiom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib" 
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        xmlns:my="clr-namespace:Axiom"
        xmlns:settings="clr-namespace:Axiom.Properties"
        mc:Ignorable="d"
               
        Loaded="Window_Loaded" 
        Closing="Window_Closing"  
        Icon="Resources/Images/Icons/axiom.ico"
        
        ResizeMode="CanMinimize" UseLayoutRounding="True"
        Height="305" Width="615"
        
        Top="{Binding Top, Source={x:Static settings:Settings.Default}, Mode=TwoWay}"
        Left="{Binding Left, Source={x:Static settings:Settings.Default}, Mode=TwoWay}" 
        Title="{Binding TitleVersion, RelativeSource={RelativeSource Mode=Self}}" 
        Style="{DynamicResource WindowStyleCustom}"
        >

    <Grid>

        <!-- Browse Button -->
        <Button x:Name="buttonBrowse" 
                Style="{DynamicResource ButtonCustom}"
                HorizontalAlignment="Left" 
                Margin="10,12,0,0" 
                VerticalAlignment="Top" 
                Width="75" Height="22" 
                Cursor="Hand" 
                Click="buttonBrowse_Click">
            <TextBlock x:Name="buttonBrowseTextBlock" 
                       Text="Input" 
                       Margin="0,-2,0,0"/>
        </Button>
        
        <!-- Browse Textbox -->
        <TextBox x:Name="tbxInput"
                 Style="{DynamicResource TextBoxBrowseCustom}" 
                 HorizontalAlignment="Left" 
                 Height="22" 
                 Margin="93,12,0,0"
                 Padding="2, 0, 0, 0" 
                 TextWrapping="NoWrap"
                 MaxLines="1"
                 VerticalAlignment="Top" 
                 Width="469"
                 TextChanged="tbxInput_TextChanged"/>

        <!-- Output Button -->
        <Button x:Name="buttonOutput"
                Style="{DynamicResource ButtonCustom}" 
                HorizontalAlignment="Left" 
                Margin="10,43,0,0" VerticalAlignment="Top" 
                Width="75"
                Height="22"
                Cursor="Hand" 
                Click="buttonOutput_Click">
            <TextBlock x:Name="buttonOutputTextBlock" 
                       Text="Output"
                       Margin="0,-2,0,0"/>
        </Button>
        
        <!-- Output Textbox-->
        <TextBox x:Name="tbxOutput" 
                 Style="{DynamicResource TextBoxBrowseCustom}" 
                 HorizontalAlignment="Left"
                 Height="22" 
                 Margin="93,43,0,0"
                 Padding="2, 0, 0, 0" 
                 TextWrapping="NoWrap" 
                 MaxLines="1"
                 VerticalAlignment="Top"
                 Width="469" 
                 TextChanged="tbxOutput_TextChanged"/>

        <!-- Input Location Button -->
        <Button x:Name="openLocationInput" 
                Style="{DynamicResource ButtonFolderCustom}" 
                HorizontalAlignment="Left" 
                Margin="567,12,0,0" 
                VerticalAlignment="Top" 
                Width="22" 
                Cursor="Hand" 
                Height="22" 
                Click="openLocationInput_Click"
                ToolTip="Open this location">
            <Image Width="11" 
                   Height="7" 
                   Stretch="Uniform" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" 
                   Margin="1,0,0,0" 
                   Style="{DynamicResource ButtonQuickFolder}" />
        </Button>

        <!-- Output Location Button -->
        <Button x:Name="openLocationOutput"
                Style="{DynamicResource ButtonFolderCustom}"
                HorizontalAlignment="Left" 
                Margin="567,43,0,0"
                VerticalAlignment="Top" 
                Width="22" 
                Cursor="Hand"
                Height="22" 
                Click="openLocationOutput_Click" 
                ToolTip="Open this location">
            <Image Width="11" 
                   Height="7" 
                   Stretch="Uniform" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" 
                   Margin="1,0,0,0" 
                   Style="{DynamicResource ButtonQuickFolder}" />
        </Button>

        
        <!-- Format -->
        <Label x:Name="labelFormat" 
               Style="{DynamicResource LabelCustom}"
               Content="Format"
               HorizontalAlignment="Left"
               Margin="5,74,0,0" 
               VerticalAlignment="Top" 
               Width="75" />
        <ComboBox x:Name="cboFormat"
                  Style="{DynamicResource ComboBoxWhite}" 
                  ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}"
                  HorizontalAlignment="Left"
                  Margin="10,100,0,0" 
                  VerticalAlignment="Top" 
                  Width="75" 
                  SelectionChanged="cboFormat_SelectionChanged" 
                  ToolTip="Container" />

        <!-- Media Type -->
        <ComboBox x:Name="cboMediaType" 
                  Style="{DynamicResource ComboBoxCustom}" 
                  ItemContainerStyle="{DynamicResource ComboBoxCustomItem}" 
                  HorizontalAlignment="Left"
                  Margin="10,128,0,0" 
                  VerticalAlignment="Top"
                  Width="75" 
                  SelectionChanged="cboMediaType_SelectionChanged"
                  ToolTipService.InitialShowDelay="1000" 
                  ToolTipService.ShowOnDisabled="True" 
                  ToolTip="Media Type">
        </ComboBox>
        
        <!-- Codec Video -->
        <ComboBox x:Name="cboVideoCodec"
                  Style="{DynamicResource ComboBoxCustom}"
                  ItemContainerStyle="{DynamicResource ComboBoxCustomItem}"
                  HorizontalAlignment="Left" 
                  Margin="10,156,0,0"
                  VerticalAlignment="Top"
                  Width="75" 
                  SelectionChanged="cboVideoCodec_SelectionChanged" 
                  ToolTipService.InitialShowDelay="1000" 
                  ToolTipService.ShowOnDisabled="True"
                  ToolTip="Video Codec" />

        <!-- Codec Audio -->
        <ComboBox x:Name="cboAudioCodec"
                  Style="{DynamicResource ComboBoxCustom}"
                  ItemContainerStyle="{DynamicResource ComboBoxCustomItem}"
                  HorizontalAlignment="Left" 
                  Margin="10,184,0,0" 
                  VerticalAlignment="Top" 
                  Width="75" 
                  SelectionChanged="cboAudioCodec_SelectionChanged" 
                  ToolTipService.InitialShowDelay="1000"
                  ToolTipService.ShowOnDisabled="True"
                  ToolTip="Audio Codec" />



        <!-- Video -->
        <Label x:Name="labelVideo"
               Style="{DynamicResource LabelCustom}"
               Content="Video" 
               HorizontalAlignment="Left" 
               Margin="91,74,0,0" 
               VerticalAlignment="Top" 
               Width="75" />
        <ComboBox x:Name="cboVideo"
                  Style="{DynamicResource ComboBoxWhite}"
                  ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}"
                  HorizontalAlignment="Left" 
                  Margin="94,100,0,0"
                  VerticalAlignment="Top"
                  Width="75" 
                  SelectionChanged="cboVideo_SelectionChanged" />

        <!-- Video Bit-rate-->
        <TextBox x:Name="vBitrateCustom" 
                 HorizontalAlignment="Left" 
                 Height="22" 
                 Margin="94,128,0,0" 
                 Padding="1, 1, 0, 0" 
                 TextWrapping="NoWrap" 
                 Text="Bitrate" 
                 VerticalAlignment="Top" 
                 Width="44"
                 MaxLines="1" 
                 MaxLength="10"
                 GotFocus="vBitrateCustom_GotFocus"
                 LostFocus="vBitrateCustom_LostFocus"
                 Style="{DynamicResource TextBoxCustom}" 
                 ToolTipService.InitialShowDelay="1000"
                 ToolTipService.ShowOnDisabled="True" 
                 ToolTip="Video Bitrate (e.g. 1M or 1000K)"/>

        <!-- CRF -->
        <TextBox x:Name="crfCustom" 
                 HorizontalAlignment="Left" 
                 Height="22" 
                 Margin="142,128,0,0"
                 Padding="0, 1, 0, 0"
                 TextWrapping="NoWrap" 
                 Text="CRF" 
                 VerticalAlignment="Top"
                 Width="27" 
                 GotFocus="crfCustom_GotFocus"
                 LostFocus="crfCustom_LostFocus" 
                 KeyDown="crfCustom_KeyDown" 
                 MaxLines="1" 
                 MaxLength="2" 
                 Style="{DynamicResource TextBoxCustom}" 
                 ToolTipService.InitialShowDelay="1000" 
                 ToolTipService.ShowOnDisabled="True"
                 ToolTip="Custom Constant Rate Factor value (e.g. 18)"/>

        <!-- Encoding Pass -->
        <Label x:Name="labelPass" 
               Style="{DynamicResource LabelCustom}"
               Content="Enc" 
               HorizontalAlignment="Left"
               Margin="89,155,0,0" 
               VerticalAlignment="Top" 
               Width="27" 
               ToolTip="Encoding Pass Method" 
               FontSize="11" 
               FontFamily="Segoe UI Semilight" />
        <ComboBox x:Name="cboPass" 
                  Style="{DynamicResource ComboBoxCustom}" 
                  ItemContainerStyle="{DynamicResource ComboBoxCustomItem}" 
                  HorizontalAlignment="Left"
                  Margin="117,156,0,0"
                  VerticalAlignment="Top" 
                  Width="52" 
                  ToolTipService.InitialShowDelay="1000" 
                  ToolTipService.ShowOnDisabled="True" 
                  ToolTip="Encoding Pass Method" 
                  SelectionChanged="cboPass_SelectionChanged"
                  DropDownClosed="cboPass_DropDownClosed" />

        <!-- FPS -->
        <Label x:Name="labelFps" 
               Style="{DynamicResource LabelCustom}"
               Content="FPS" 
               HorizontalAlignment="Left" 
               Margin="89,182,0,0"
               VerticalAlignment="Top" 
               Width="26" 
               ToolTip="Frames Per Second" 
               FontSize="11" 
               FontFamily="Segoe UI Semilight" />

        <ComboBox x:Name="cboFPS" 
                  Style="{DynamicResource ComboBoxCustom}" 
                  ItemContainerStyle="{DynamicResource ComboBoxCustomItem}" 
                  HorizontalAlignment="Left" 
                  Margin="117,184,0,0" 
                  VerticalAlignment="Top" 
                  Width="52"
                  ToolTipService.InitialShowDelay="1000" 
                  ToolTipService.ShowOnDisabled="True"
                  ToolTip="Frames Per Second" 
                  SelectionChanged="cboFPS_SelectionChanged" 
                  IsTextSearchEnabled="False">
            <System:String>auto</System:String>
            <System:String>23.976</System:String>
            <System:String>24</System:String>
            <System:String>25</System:String>
            <System:String>29.97</System:String>
            <System:String>30</System:String>
            <System:String>48</System:String>
            <System:String>50</System:String>
            <System:String>59.94</System:String>
            <System:String>60</System:String>
            <System:String>Custom</System:String>
        </ComboBox>

        

        <!-- Audio -->
        <Label x:Name="labelAudio" 
               Style="{DynamicResource LabelCustom}" 
               Content="Audio" 
               HorizontalAlignment="Left" 
               Margin="175,74,0,0" 
               VerticalAlignment="Top"
               Width="75" />

        <!--ItemsSource="{Binding Audio_ComboBoxItems}"
            SelectedItem="{Binding Audio_SelectedItem}"-->
        <ComboBox x:Name="cboAudio" 
                  ItemsSource="{Binding AudioItemSource}"
                  Style="{DynamicResource ComboBoxWhite}" 
                  ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}"
                  HorizontalAlignment="Left" Margin="178,100,0,0" 
                  VerticalAlignment="Top"
                  Width="75"
                  SelectionChanged="cboAudio_SelectionChanged" />

        <!-- Audio kbps Custom -->
        <TextBox x:Name="audioCustom" 
                 HorizontalAlignment="Left"
                 Height="22"
                 Width="41" 
                 Margin="178,128,0,0"
                 Padding="2, 1, 0, 0" 
                 TextWrapping="NoWrap" 
                 Text="kbps" 
                 VerticalAlignment="Top" 
                 MaxLines="1"
                 MaxLength="5" 
                 GotFocus="audioCustom_GotFocus" 
                 LostFocus="audioCustom_LostFocus" 
                 KeyDown="audioCustom_KeyDown" 
                 Style="{DynamicResource TextBoxCustom}" 
                 ToolTipService.InitialShowDelay="1000" 
                 ToolTipService.ShowOnDisabled="True" 
                 ToolTip="Custom Audio Bitrate (e.g. 245)"/>

        <!-- VBR Toggle -->
        <ToggleButton x:Name="tglVBR"
                      Content="VBR"
                      HorizontalAlignment="Left"
                      Margin="223,128,0,0" 
                      VerticalAlignment="Top" 
                      Cursor="Hand"
                      ToolTipService.InitialShowDelay="1000"
                      ToolTipService.ShowOnDisabled="True" 
                      ToolTip="Toggle Variable Bitrate for Vorbis (always), Opus, Lame, AAC, (if not Auto)." 
                      Width="30"
                      Height="22" 
                      Style="{DynamicResource ToggleButtonSmall}" />


        <!-- Sample Rate -->
        <Label x:Name="labelSamplerate" 
               Style="{DynamicResource LabelCustom}" 
               Content="Hz"
               HorizontalAlignment="Left"
               Margin="173,155,0,0"
               VerticalAlignment="Top"
               Width="24"
               ToolTip="Audio Sample Rate" 
               FontSize="11"
               FontFamily="Segoe UI Semilight" />
        <ComboBox x:Name="cboSamplerate" 
                  Style="{DynamicResource ComboBoxCustom}"
                  ItemContainerStyle="{DynamicResource ComboBoxCustomItem}"
                  HorizontalAlignment="Left" 
                  Margin="201,156,0,0" 
                  VerticalAlignment="Top" 
                  Width="52" 
                  ToolTip="Audio Sample Rate" 
                  SelectionChanged="cboSamplerate_SelectionChanged" />

        <!-- Bit Depth -->
        <Label x:Name="labelBitdepth" 
               Style="{DynamicResource LabelCustom}" 
               Content="Bit" 
               HorizontalAlignment="Left"
               Margin="173,183,0,0" 
               VerticalAlignment="Top" 
               Width="24" 
               ToolTip="Audio Bit Depth" 
               FontSize="11" 
               FontFamily="Segoe UI Semilight" />

        <ComboBox x:Name="cboBitDepth" 
                  Style="{DynamicResource ComboBoxCustom}" 
                  ItemContainerStyle="{DynamicResource ComboBoxCustomItem}" 
                  HorizontalAlignment="Left" 
                  Margin="201,184,0,0" 
                  VerticalAlignment="Top" 
                  Width="52" 
                  ToolTipService.InitialShowDelay="1000" 
                  ToolTipService.ShowOnDisabled="True" 
                  ToolTip="Audio Bit Depth" 
                  SelectionChanged="cboBitDepth_SelectionChanged">
        </ComboBox>
        
        
        
        <!-- Channel -->
        <Label x:Name="labelChannel" 
               Style="{DynamicResource LabelCustom}" 
               Content="Channel"
               HorizontalAlignment="Left" 
               Margin="259,74,0,0"
               VerticalAlignment="Top" 
               Width="75" />
        <ComboBox x:Name="cboChannel" 
                  Style="{DynamicResource ComboBoxWhite}"
                  ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}"
                  HorizontalAlignment="Left" 
                  Margin="262,100,0,0"
                  VerticalAlignment="Top" 
                  Width="75" />

        <!-- Audio Limiter Toggle -->
        <ToggleButton x:Name="tglAudioLimiter" 
                      Content="Limit"
                      HorizontalAlignment="Left"
                      Margin="303,128,0,0" 
                      VerticalAlignment="Top"
                      Cursor="Hand" 
                      ToolTipService.ShowOnDisabled="True" 
                      ToolTip="Turn Limiter On or Off" 
                      Width="34" 
                      Height="22" 
                      Style="{DynamicResource ToggleButtonSmall}" 
                      Checked="tglAudioLimiter_Checked" 
                      Unchecked="tglAudioLimiter_Unchecked"/>
        <TextBox x:Name="audioLimiter"
                 HorizontalAlignment="Left"
                 Height="22"
                 Margin="262,128,0,0"
                 Padding="2, 1, 0, 0" 
                 TextWrapping="NoWrap" 
                 VerticalAlignment="Top" 
                 Width="37" 
                 MaxLines="1" 
                 MaxLength="11" 
                 Style="{DynamicResource TextBoxCustom}"
                 ToolTipService.InitialShowDelay="1000"
                 ToolTipService.ShowOnDisabled="True"
                 ToolTip="Prevents audio from rising over a desired threshold, [0.0625 - 1]." 
                 IsEnabled="False"/>

        <!-- Volume -->
        <Label x:Name="labelVolume"
               Style="{DynamicResource LabelCustom}" 
               Content="Vol" HorizontalAlignment="Left"
               Margin="258,154,0,0" 
               VerticalAlignment="Top"
               Width="27"
               ToolTip="Volume"
               FontSize="11" 
               FontFamily="Segoe UI Semilight"
               RenderTransformOrigin="-3.349,0.72" />
        <TextBox x:Name="volumeUpDown" 
                 HorizontalAlignment="Left" 
                 TextAlignment="Right" 
                 Height="22" 
                 Margin="285,156,0,0" 
                 Padding="0, 2, 17, 0" 
                 TextWrapping="NoWrap" 
                 VerticalAlignment="Top" 
                 Width="52" 
                 Style="{DynamicResource TextBoxCustom}" 
                 KeyDown="volumeUpDown_KeyDown" 
                 MaxLines="1"
                 MaxLength="6" 
                 ToolTipService.InitialShowDelay="1000"
                 ToolTipService.ShowOnDisabled="True"
                 ToolTip="Volume" 
                 Text="100" 
                 TextChanged="volumeUpDown_TextChanged" />
        <!-- Vol Up -->
        <Button x:Name="volumeUpButton" 
                HorizontalAlignment="Left"
                Margin="321,157,0,0" 
                Padding="0, 0, 0, 0" 
                VerticalAlignment="Top"
                Width="15"
                Height="10" 
                Click="volumeUpButton_Click"
                PreviewMouseLeftButtonDown="volumeUpButton_PreviewMouseLeftButtonDown"
                PreviewMouseUp="volumeUpButton_PreviewMouseUp" 
                BorderBrush="{x:Null}"
                Background="{x:Null}" 
                Style="{DynamicResource ButtonVolume}">
            <Image x:Name="volumeUpButtonGlyph"
                   Width="6" 
                   Height="5" 
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" Margin="1,1,0,0"
                   Style="{DynamicResource ButtonVolumeUp}" />
        </Button>
        <!-- Vol Down -->
        <Button x:Name="volumeDownButton" 
                HorizontalAlignment="Left" 
                Margin="321,167,0,0" 
                Padding="0, 0, 0, 0" 
                VerticalAlignment="Top" 
                Width="15"
                Height="10"
                Click="volumeDownButton_Click" 
                PreviewMouseLeftButtonDown="volumeDownButton_PreviewMouseLeftButtonDown" 
                PreviewMouseUp="volumeDownButton_PreviewMouseUp"  
                BorderBrush="{x:Null}" 
                Background="{x:Null}" 
                Style="{DynamicResource ButtonVolume}">
            <Image x:Name="volumeDownButtonGlyph"
                   Width="6" 
                   Height="5" 
                   Stretch="Uniform" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" 
                   Margin="1,0,0,0" 
                   Style="{DynamicResource ButtonVolumeDown}" />
        </Button>


        <!-- Audio Stream -->
        <Label x:Name="labelStream" 
               Style="{DynamicResource LabelCustom}"
               Content="Str" 
               HorizontalAlignment="Left" 
               Margin="257,183,0,0" 
               VerticalAlignment="Top"
               Width="28" 
               FontSize="11"
               FontFamily="Segoe UI Semilight"
               ToolTip="Audio Stream to keep." />

        <ComboBox x:Name="cboAudioStream" 
                  Style="{DynamicResource ComboBoxCustom}"
                  ItemContainerStyle="{DynamicResource ComboBoxCustomItem}" 
                  HorizontalAlignment="Left"
                  Margin="285,184,0,0" 
                  VerticalAlignment="Top"
                  Width="52" 
                  ToolTipService.InitialShowDelay="1000"
                  ToolTipService.ShowOnDisabled="True"
                  ToolTip="Audio Stream to keep."  >
            <System:String>none</System:String>
            <System:String>all</System:String>
            <System:String>1</System:String>
            <System:String>2</System:String>
            <System:String>3</System:String>
            <System:String>4</System:String>
            <System:String>5</System:String>
            <System:String>6</System:String>
            <System:String>7</System:String>
            <System:String>8</System:String>
        </ComboBox>


        <!-- Size -->
        <Label x:Name="labelSize" 
               Style="{DynamicResource LabelCustom}"
               Content="Size" 
               HorizontalAlignment="Left"
               Margin="342,74,0,0" 
               VerticalAlignment="Top"
               Width="75" />

        <ComboBox x:Name="cboSize" 
                  Style="{DynamicResource ComboBoxWhite}" 
                  ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}"
                  HorizontalAlignment="Left" 
                  Margin="346,100,0,0" 
                  VerticalAlignment="Top" 
                  Width="75"
                  SelectionChanged="cboSize_SelectionChanged"  >
            <System:String>No</System:String>
            <System:String>8K</System:String>
            <System:String>4K</System:String>
            <System:String>4K UHD</System:String>
            <System:String>2K</System:String>
            <System:String>1440p</System:String>
            <System:String>1200p</System:String>
            <System:String>1080p</System:String>
            <System:String>720p</System:String>
            <System:String>480p</System:String>
            <System:String>320p</System:String>
            <System:String>240p</System:String>
            <System:String>Custom</System:String>
        </ComboBox>

        <!-- Resize Width -->
        <TextBox x:Name="widthCustom" 
                 HorizontalAlignment="Left" 
                 Height="22" 
                 Margin="346,128,0,0"
                 Padding="2, 1, 0, 0"
                 TextWrapping="NoWrap"
                 Text="width" 
                 VerticalAlignment="Top" 
                 Width="75" 
                 MaxLines="1" 
                 Style="{DynamicResource TextBoxCustom}" 
                 GotFocus="widthCustom_GotFocus" 
                 LostFocus="widthCustom_LostFocus" />
        <!-- Resize Height -->
        <TextBox x:Name="heightCustom" 
                 HorizontalAlignment="Left" 
                 Height="22"
                 Margin="346,156,0,0"
                 Padding="2, 1, 0, 0" 
                 TextWrapping="NoWrap"
                 Text="height" 
                 VerticalAlignment="Top"
                 Width="75"
                 MaxLines="1" 
                 Style="{DynamicResource TextBoxCustom}"
                 GotFocus="heightCustom_GotFocus" 
                 LostFocus="heightCustom_LostFocus" />

        <!-- Crop -->
        <Button x:Name="buttonCrop" 
                Padding="0" 
                HorizontalAlignment="Left" 
                Margin="346,184,0,0" 
                VerticalAlignment="Top" 
                Width="58" 
                Height="22" 
                Cursor="Hand" 
                Click="buttonCrop_Click" 
                Style="{DynamicResource ButtonCropCustom}"
                ToolTipService.InitialShowDelay="1000" 
                ToolTipService.ShowOnDisabled="True" 
                ToolTip="Open Crop Window">
            <TextBlock x:Name="buttonCropTextBlock" 
                       Text="Crop" 
                       Margin="0,-1,0,0" 
                       FontSize="11"
                       Style="{DynamicResource ButtonCropTextBlock}" />
        </Button>

        <!-- Crop Clear -->
        <Button x:Name="buttonCropClear"
                Padding="0" 
                HorizontalAlignment="Left"
                Margin="407,184,0,0"
                VerticalAlignment="Top"
                Width="14" 
                Height="22"
                Cursor="Hand"
                Click="buttonCropClear_Click" 
                Style="{DynamicResource ButtonCropClear}"
                ToolTipService.InitialShowDelay="1000"
                ToolTipService.ShowOnDisabled="True" 
                ToolTip="Clear Last Used Crop Settings">
            <TextBlock x:Name="buttonCropClearTextBox"
                       Text="" Margin="0,-2,0,0" />
        </Button>


        
        <!-- Cut -->
        <Label x:Name="lableCut" 
               Style="{DynamicResource LabelCustom}" 
               Content="Cut" 
               HorizontalAlignment="Left"
               Margin="426,74,0,0"
               VerticalAlignment="Top" 
               Width="75" />

        <ComboBox x:Name="cboCut" 
                  Style="{DynamicResource ComboBoxWhite}"
                  ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}" 
                  HorizontalAlignment="Left" 
                  Margin="430,100,0,0" 
                  VerticalAlignment="Top"
                  Width="75" 
                  SelectionChanged="cboCut_SelectionChanged"  >
            <System:String>No</System:String>
            <System:String>Yes</System:String>
        </ComboBox>
        <!-- Cut Start -->
        <TextBox x:Name="cutStart" 
                 HorizontalAlignment="Left" 
                 Height="22" 
                 Margin="430,128,0,0" 
                 Padding="1, 1, 0, 0" 
                 TextWrapping="NoWrap"
                 Text="00:00:00.000" 
                 VerticalAlignment="Top" 
                 Width="75" 
                 Style="{DynamicResource TextBoxCustom}"
                 ToolTipService.InitialShowDelay="1000"
                 ToolTipService.ShowOnDisabled="True"
                 ToolTip="Start Time (hh:mm:ss.ms)"/>
        <!-- Cut End -->
        <TextBox x:Name="cutEnd" 
                 HorizontalAlignment="Left" 
                 Height="22" 
                 Margin="430,156,0,0" 
                 Padding="1, 1, 0, 0" 
                 TextWrapping="NoWrap"
                 Text="00:00:00.000"
                 VerticalAlignment="Top"
                 Width="75" 
                 Style="{DynamicResource TextBoxCustom}"
                 ToolTipService.InitialShowDelay="1000" 
                 ToolTipService.ShowOnDisabled="True"
                 ToolTip="End Time (hh:mm:ss.ms)"/>

        <!-- Frame Range -->
        <TextBox x:Name="frameStart" 
                 HorizontalAlignment="Left"
                 Height="22" 
                 Margin="430,184,0,0" 
                 Padding="0, 1, 0, 0"
                 TextWrapping="NoWrap" 
                 MaxLines="1" 
                 VerticalAlignment="Top"
                 Width="36"
                 Style="{DynamicResource TextBoxCustom}" 
                 GotFocus="frameStart_GotFocus" 
                 LostFocus="frameStart_LostFocus" 
                 ToolTipService.InitialShowDelay="1000" 
                 ToolTipService.ShowOnDisabled="True" 
                 ToolTip="Start Frame" 
                 Text="Frame"
                 FontSize="11"/>
        <TextBox x:Name="frameEnd" 
                 HorizontalAlignment="Left" 
                 Height="22" 
                 Margin="469,184,0,0" 
                 Padding="0, 1, 0, 0" 
                 TextWrapping="NoWrap" 
                 MaxLines="1" 
                 VerticalAlignment="Top"
                 Width="36" 
                 Style="{DynamicResource TextBoxCustom}" 
                 GotFocus="frameEnd_GotFocus" 
                 LostFocus="frameEnd_LostFocus" 
                 ToolTipService.InitialShowDelay="1000"
                 ToolTipService.ShowOnDisabled="True"
                 ToolTip="End Frame" 
                 Text="Range" FontSize="11"/>


        <!-- Options -->
        <Label x:Name="labelOptions" 
               Style="{DynamicResource LabelCustom}" 
               Content="Options" 
               HorizontalAlignment="Left" 
               Margin="510,74,0,0" 
               VerticalAlignment="Top" 
               Width="75" />

        <ComboBox x:Name="cboPreset" 
                  Style="{DynamicResource ComboBoxWhite}" 
                  ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}" 
                  HorizontalAlignment="Left" 
                  Margin="514,100,0,0" 
                  VerticalAlignment="Top"
                  Width="75" 
                  SelectionChanged="cboPreset_SelectionChanged">
            <System:String>Preset</System:String>
            <!-- <System:String>Custom</System:String> -->
            <System:String>DVD</System:String>
            <System:String>Blu-ray</System:String>
            <System:String>HD Video</System:String>
            <System:String>SD Video</System:String>
            <System:String>HTML5</System:String>
            <System:String>Win Phone</System:String>
            <System:String>Android</System:String>
            <System:String>iOS</System:String>
            <System:String>iTunes</System:String>
            <System:String>PS3</System:String>
            <System:String>PS4</System:String>
            <System:String>Xbox 360</System:String>
            <System:String>Xbox One</System:String>
