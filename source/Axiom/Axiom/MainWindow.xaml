<Window x:Class="Axiom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib" 
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        xmlns:Themes1="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" 
        xmlns:my="clr-namespace:Axiom"
        xmlns:settings="clr-namespace:Axiom.Properties"
        mc:Ignorable="d"
               
        Loaded="Window_Loaded" 
        Closing="Window_Closing"  
        Icon="Resources/Images/Icons/axiom.ico"
        
        RenderOptions.BitmapScalingMode="Fant"
        UseLayoutRounding="True"
        Height="432"
        Width="768"
        
        Top="{Binding Top, Source={x:Static settings:Settings.Default}, Mode=TwoWay}"
        Left="{Binding Left, Source={x:Static settings:Settings.Default}, Mode=TwoWay}" 
        Title="{Binding TitleVersion, RelativeSource={RelativeSource Mode=Self}}" 
        Style="{DynamicResource WindowStyleCustom}"
        >

    <Grid>

        <!-- Script View -->
        <RichTextBox x:Name="rtbScriptView" 
                     Margin="11,71,280,56" 
                     Padding="10,10,10,48"
                     FontSize="14" 
                     Grid.ColumnSpan="1" 
                     VerticalScrollBarVisibility="Auto" 
                     Style="{DynamicResource RichTextBoxStyle}">
        </RichTextBox>

        <!-- Save Button -->
        <Button x:Name="btnScriptSave" 
                Style="{DynamicResource ButtonCustom}"
                Margin="21,0,0,66"
                Cursor="Hand"
                MaxWidth="60" 
                MaxHeight="22"
                MinWidth="60"
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="56"
                Click="btnScriptSave_Click">
            <TextBlock Text="Save" 
                Margin="0,-2,0,0"/>
        </Button>

        <!-- Copy Button -->
        <Button x:Name="btnScriptCopy"
                Style="{DynamicResource ButtonCustom}"
                Margin="89,0,0,66"
                Click="btnScriptCopy_Click"
                Cursor="Hand" 
                MaxWidth="60" 
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="54">
            <TextBlock Text="Copy" 
                Margin="0,-2,0,0"/>
        </Button>

        <!-- Sort Button -->
        <Button x:Name="btnScriptSort"
                Style="{DynamicResource ButtonCustom}"
                Margin="157,0,0,66" 
                Cursor="Hand"
                MaxWidth="60"
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" 
                Width="53" 
                Click="btnScriptSort_Click">
            <TextBlock x:Name="txblScriptSort" 
                       Text="Sort"
                       Width="50"
                       Margin="0,-2,0,0"
                       TextAlignment="Center"/>
        </Button>

        <!-- Clear Button -->
        <Button x:Name="btnScriptClear"
                Style="{DynamicResource ButtonCustom}"
                Margin="225,0,0,66" 
                Cursor="Hand"
                MaxWidth="60"
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" 
                Width="53" 
                Click="btnScriptClear_Click">
            <TextBlock x:Name="txblScriptClear" 
                       Text="Clear"
                       Width="50"
                       Margin="0,-2,0,0"
                       TextAlignment="Center"/>
        </Button>


        <!-- Script Button -->
        <Button x:Name="btnScript" 
                Style="{DynamicResource ButtonCustom}" 
                HorizontalAlignment="Left"
                Margin="293,0,0,66"
                VerticalAlignment="Bottom"
                Width="60" 
                Height="22" 
                Cursor="Hand"
                Click="btnScript_Click"
                ToolTip="Generate FFmpeg Commands">
            <TextBlock Text="Script" 
                       Margin="0,-2,0,0" />
        </Button>

        <!-- Run Button -->
        <Button x:Name="btnScriptRun"
                Style="{DynamicResource ButtonCustom}"
                Margin="361,0,0,66"
                Click="btnScriptRun_Click" 
                Cursor="Hand" 
                MaxWidth="60" 
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Height="22" 
                ToolTipService.InitialShowDelay="1000" 
                ToolTipService.ShowOnDisabled="True"
                ToolTip="Run the customized Script." 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="54">
            <TextBlock Text="Run" 
                Margin="0,-2,0,0"/>
        </Button>

