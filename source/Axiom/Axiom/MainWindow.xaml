                                <Image Width="9" 
                                       Height="11" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" 
                                       Style="{DynamicResource ButtonRevertArrow}" />
                            </Button>

                            <!-- FFplay Path TextBox -->
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="FFplay" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to FFplay.exe"
                                   Grid.Row="2" Grid.Column="1" Width="56"/>
                            <TextBox x:Name="textBoxFFplayPathConfig" 
                                     Text="{Binding FFplayPath_Text, Mode=TwoWay}"
                                     IsEnabled="{Binding FFplayPath_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TextBoxBrowseCustom}"
                                     HorizontalAlignment="Left" 
                                     Height="20"
                                     Margin="10,2,0,0" 
                                     TextWrapping="Wrap" 
                                     VerticalAlignment="Top"
                                     Width="105"
                                     IsReadOnly="True" 
                                     PreviewMouseDown="tbxFFplayPath_PreviewMouseDown"
                                     ToolTip="Path to FFplay.exe" 
                                     Grid.Column="2" 
                                     Grid.Row="2"/>

                            <!-- FFplay Path Revert Button -->
                            <Button x:Name="btnFFplayAuto"
                                            HorizontalAlignment="Left"
                                            Margin="122,1,0,0" 
                                            VerticalAlignment="Top"
                                            Width="23" 
                                            Height="23" 
                                            Cursor="Hand"
                                            ToolTip="Revert to Auto"
                                            Click="btnFFplayAuto_Click"
                                            Style="{DynamicResource ButtonFolderCustom}" 
                                            Grid.Column="2" 
                                            Grid.Row="2" >
                                <Image Width="9" 
                                           Height="11" 
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" 
                                           Style="{DynamicResource ButtonRevertArrow}" />
                            </Button>

                            <!-- Log Path TextBox -->
                            <Label x:Name="labelLogConfig" 
                                   Style="{DynamicResource LabelCustom}" 
                                   Content="Log" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to Save Log" 
                                   Grid.Row="3" Grid.Column="1" Width="36"/>
                            <TextBox x:Name="textBoxLogConfig" 
                                     Text="{Binding LogPath_Text, Mode=TwoWay}"
                                     IsEnabled="{Binding LogPath_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TextBoxBrowseCustom}" 
                                     HorizontalAlignment="Left" 
                                     Height="20" 
                                     Margin="10,2,0,0" 
                                     TextWrapping="Wrap"
                                     VerticalAlignment="Top"
                                     Width="105"
                                     IsReadOnly="True" 
                                     PreviewMouseDown="tbxLog_PreviewMouseDown" 
                                     ToolTipService.ShowOnDisabled="True" 
                                     ToolTip="Path to save output log." 
                                     Grid.Column="2" 
                                     Grid.Row="3"/>

                            <!-- Log Revert Button -->
                            <Button x:Name="btnLogAuto" 
                                    HorizontalAlignment="Left" 
                                    Margin="122,1,0,0" 
                                    VerticalAlignment="Top"
                                    Width="23"
                                    Height="23" 
                                    Cursor="Hand"
                                    ToolTip="Clear Path" 
                                    Click="btnLogAuto_Click" 
                                    Style="{DynamicResource ButtonFolderCustom}" 
                                    Grid.Column="2"
                                    Grid.Row="3">
                                <Image Width="9"
                                       Height="11" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" 
                                       Margin="1,0,0,0" 
                                       Style="{DynamicResource ButtonRevertArrow}" />
                            </Button>

                            <!-- Log Enable/Disable Checkbox -->
                            <CheckBox x:Name="cbxLog" 
                                      IsChecked="{Binding LogCheckBox_IsChecked}"
                                      IsEnabled="{Binding LogCheckBox_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      HorizontalAlignment="Left" 
                                      Margin="36,6,0,0" 
                                      VerticalAlignment="Top" 
                                      ToolTip="Enable/Disable Log"
                                      Checked="cbxLog_Checked" 
                                      Unchecked="cbxLog_Unchecked" 
                                      Style="{DynamicResource CheckBoxCustom}" 
                                      Grid.Row="3" Grid.Column="1"/>

                            <!-- Threads -->
                            <Label x:Name="labelThreads"
                                   Style="{DynamicResource LabelCustom}"
                                   Content="Threads" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   Height="26" 
                                   ToolTip="Path to Save Log"
                                   Grid.Row="5" Grid.Column="1"/>
                            <ComboBox x:Name="cboThreads"
                                      ItemsSource="{Binding Threads_Items}"
                                      SelectedIndex="{Binding Threads_SelectedIndex}"
                                      SelectedItem="{Binding Threads_SelectedItem}"
                                      IsEnabled="{Binding Threads_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource ComboBoxCustom}" 
                                      ItemContainerStyle="{DynamicResource ComboBoxCustomItem}"
                                      HorizontalAlignment="Left" 
                                      VerticalAlignment="Top" 
                                      Width="105" 
                                      IsTextSearchEnabled="False" 
                                      SelectionChanged="threadSelect_SelectionChanged" 
                                      KeyDown="threadSelect_KeyDown" 
                                      Grid.Column="2"
                                      Grid.Row="5" 
                                      Margin="10,2,0,0"/>

                            <!-- Theme -->
                            <Label x:Name="labelTheme" 
                                   Style="{DynamicResource LabelCustom}" 
                                   Content="Theme" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to Save Log" 
                                   Grid.Row="6" 
                                   Grid.Column="1"/>
                            <ComboBox x:Name="cboTheme" 
                                      ItemsSource="{Binding Theme_Items}"
                                      SelectedIndex="{Binding Theme_SelectedIndex}"
                                      SelectedItem="{Binding Theme_SelectedItem}"
                                      IsEnabled="{Binding Theme_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource ComboBoxCustom}"
                                      ItemContainerStyle="{DynamicResource ComboBoxCustomItem}" 
                                      HorizontalAlignment="Left" 
                                      VerticalAlignment="Top" 
                                      Width="105"
                                      IsTextSearchEnabled="False"
                                      SelectionChanged="themeSelect_SelectionChanged" 
                                      Grid.Column="2" 
                                      Grid.Row="6"
                                      Margin="10,2,0,0"/>

                            <!-- Check for Updates -->
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="Updates" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to Save Log" 
                                   Grid.Row="8" Grid.Column="1"/>
                            <!-- Window Toggle  -->
                            <ToggleButton x:Name="tglUpdateAutoCheck"
                                          IsChecked="{Binding UpdateAutoCheck_IsChecked}"
                                          IsEnabled="{Binding UpdateAutoCheck_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Cursor="Hand" 
                                          HorizontalAlignment="Left" 
                                          VerticalAlignment="Top" 
                                          ToolTip="Automatically check for updates at startup." 
                                          Width="58" 
                                          Height="22" 
                                          Style="{DynamicResource ToggleButtonCustom}" 
                                          Checked="tglUpdateAutoCheck_Checked"
                                          Unchecked="tglUpdateAutoCheck_Unchecked"
                                          Grid.Column="2" 
                                          Grid.Row="8" 
                                          Margin="10,2,0,0">
                                <TextBlock x:Name="tblkUpdatesAutoCheck" 
                                           Style="{DynamicResource TextBlockCustom}" 
                                           Text="Off"
                                           Margin="0,-2,0,0" />
                            </ToggleButton>
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="Check" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to Save Log" 
                                    Grid.Column="2" 
                                    Grid.Row="8" 
                                    Margin="73,0,0,0"/>

                            <!-- Reset Saved Settings -->
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="Settings"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top" 
                                   Height="26" 
                                   Grid.Row="10" Grid.Column="1" />

                            <!-- Reset Saved Settings Button -->
                            <Button x:Name="btnClearAllSavedSettings"
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top"
                                    Width="55" 
                                    Background="{x:Null}"
                                    Height="23" 
                                    ToolTip="Reset the Saved Settings to Default." 
                                    Cursor="Hand" 
                                    Click="btnClearAllSavedSettings_Click" 
                                    Style="{DynamicResource ButtonSmallCustom}" 
                                    Grid.Column="2" 
                                    Grid.Row="10" Margin="10,2,0,0">
                                <TextBlock Style="{DynamicResource TextBlockCustom}" 
                                           Text="Reset" 
                                           Margin="0,-1,0,0"/>
                            </Button>

                            <!-- Delete Saved Settings Button -->
                            <Button x:Name="btnDeleteSettings"
                                    HorizontalAlignment="Left"
                                    Margin="72,2,0,0"
                                    VerticalAlignment="Top"
                                    Width="55" 
                                    Background="{x:Null}" 
                                    Height="23"
                                    ToolTip="Delete the Settings File in AppData." 
                                    Cursor="Hand" 
                                    Style="{DynamicResource ButtonSmallCustom}" 
                                    Click="btnDeleteSettings_Click" 
                                    Grid.Column="2" 
                                    Grid.Row="10">
                                <TextBlock Style="{DynamicResource TextBlockCustom}" 
                                           Text="Delete" 
                                           Margin="0,-1,0,0"/>
                            </Button>

                        </Grid>


                    </ScrollViewer>

                </Grid>

            </TabItem>


        </TabControl>


        <!-- Tool Buttons Grid -->
        <Grid HorizontalAlignment="Left" 
              Width="343" 
              Height="35" 
              VerticalAlignment="Bottom" 
              Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>

            </Grid.ColumnDefinitions>

            <!-- Info Button -->
            <Button x:Name="buttonInfo" 
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0" 
                    VerticalAlignment="Top" 
                    Width="22" 
                    Height="22" 
                    Cursor="Hand" 
                    Click="buttonInfo_Click" 
                    Background="{x:Null}"
                    Style="{DynamicResource ButtonSmallCustom}"
                    ToolTip="About this program">
                <Image Width="5"
                       Height="10"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" 
                       Margin="1,0,0,0" 
                       Style="{DynamicResource ButtonInfo}"/>
            </Button>

            <!-- Website Button -->
            <Button x:Name="buttonWebsite" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="22" 
                    Height="22" 
                    Cursor="Hand" 
                    Click="buttonWebsite_Click" 
                    Background="{x:Null}" 
                    Style="{DynamicResource ButtonSmallCustom}" 
                    ToolTip="Visit Website" 
                    Grid.Column="1">
                <Image Width="11" 
                       Height="11"
                       Stretch="Uniform" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="1,-1,0,0" 
                       Style="{DynamicResource ButtonWebsite}" />
            </Button>

            <!-- Update Button -->
            <Button x:Name="buttonUpdate" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" 
                    Width="22" 
                    Height="22" 
                    Cursor="Hand" 
                    Background="{x:Null}" 
                    Style="{DynamicResource ButtonSmallCustom}" 
                    ToolTip="Check for Updates"
                    Click="buttonUpdate_Click" 
                    Grid.Column="2">
                <Image Width="10" 
                       Height="10"
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="0,0,0,0" 
                       Style="{DynamicResource ButtonUpdate}" />
            </Button>

            <!-- Window Toggle  -->
            <ToggleButton x:Name="tglCMDWindowKeep"
                          IsChecked="{Binding CMDWindowKeep_IsChecked}"
                          Cursor="Hand" 
                          HorizontalAlignment="Left" 
                          VerticalAlignment="Top" 
                          ToolTip="Keep FFmpeg window open after converting" 
                          Width="22" 
                          Height="22" 
                          Style="{DynamicResource ToggleButtonCustom}" 
                          Checked="tglCMDWindowKeep_Checked"
                          Unchecked="tglCMDWindowKeep_Unchecked"
                          Grid.Column="3">
                <Image Width="10"
                       Height="10" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="0,0,0,0" 
                       Style="{DynamicResource ButtonWindow}" />
            </ToggleButton>

            <!-- Auto Sort Script Button -->
            <ToggleButton x:Name="tglAutoSortScript"
                          Style="{DynamicResource ToggleButtonCustom}"
                          IsChecked="{Binding AutoSortScript_IsChecked}"
                          Margin="0,0,0,0"
                          Cursor="Hand" 
                          Width="22" 
                          Height="22" 
                          ToolTipService.InitialShowDelay="1000" 
                          ToolTipService.ShowOnDisabled="True"
                          ToolTip="Auto Sort Script" 
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Grid.Column="4" 
                          Checked="tglAutoSortScript_Checked"
                          Unchecked="tglAutoSortScript_Unchecked">
                <Image Width="10"
                       Height="11" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="0,0,0,0" 
                       Style="{DynamicResource ButtonAutoSortScript}" />
            </ToggleButton>

            <!-- Debug Console -->
            <Button x:Name="buttonDebugConsole"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="22"
                    Height="22"
                    Cursor="Hand" 
                    Click="buttonDebugConsole_Click" 
                    Background="{x:Null}" 
                    Style="{DynamicResource ButtonSmallCustom}" 
                    ToolTip="Show Debug Console" 
                    Grid.Column="5" 
                    Margin="1,0,0,0">
                <Image Width="12" 
                       Height="10" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="-1,0,0,0"
                       Style="{DynamicResource ButtonDebugConsole}" />
            </Button>

            <!-- Log Console -->
            <Button x:Name="buttonLogConsole" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" 
                    Width="22"
                    Height="22"
                    Cursor="Hand" 
                    Click="buttonLogConsole_Click" 
                    Background="{x:Null}"
                    Style="{DynamicResource ButtonSmallCustom}"
                    ToolTip="Show Log Console" 
                    Grid.Column="6">
                <Image Width="10"
                       Height="11"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0" 
                       Style="{DynamicResource ButtonLogConsole}" />
            </Button>

            <!-- Log Button -->
            <Button x:Name="buttonLog"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="22" 
                    Height="22"
                    Cursor="Hand"
                    Click="buttonLog_Click"
                    ToolTip="View the last Output Log"
                    Background="{x:Null}"
                    Style="{DynamicResource ButtonSmallCustom}"
                    Grid.Column="7">
                <Image Width="9" 
                       Height="11" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" 
                       Margin="0,-1,0,0" 
                       Style="{DynamicResource ButtonLog}" />
            </Button>

            <!-- CMD Button -->
            <Button x:Name="buttonCmd"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="22" 
                    Height="22" 
                    Cursor="Hand" 
                    Click="buttonCmd_Click" 
                    Background="{x:Null}" 
                    Style="{DynamicResource ButtonSmallCustom}" 
                    ToolTip="Launch Command Prompt"
                    Grid.Column="8">
                <Image Width="11" 
                       Height="11" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0"
                       Style="{DynamicResource ButtonCMD}" />
            </Button>

            <!-- Properties Button -->
            <Button x:Name="buttonProperties" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Width="22"
                    Height="22" 
                    Cursor="Hand" 
                    Click="buttonProperties_Click"
                    Background="{x:Null}" 
                    Style="{DynamicResource ButtonSmallCustom}" 
                    ToolTip="View File Properties"
                    Grid.Column="9">
                <Image Width="10"
                       Height="11" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="0,0,0,0"
                       Style="{DynamicResource ButtonProperties}" />
            </Button>

            <!-- Play File -->
            <Button x:Name="buttonPlayFile"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="22" 
                    Height="22"
                    Cursor="Hand" 
                    Click="buttonPlayFile_Click" 
                    Background="{x:Null}" 
                    Style="{DynamicResource ButtonSmallCustom}" 
                    ToolTip="Play Converted File"
                    Grid.Column="10">
                <Image Width="11" 
                       Height="11"
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="-1,0,0,0" 
                       Style="{DynamicResource ButtonPlay}" />
            </Button>

        </Grid>


        <!-- Process Buttons Grid -->
        <Grid Margin="0,0,10,0" 
              Height="35" 
              VerticalAlignment="Bottom" 
              HorizontalAlignment="Right" 
              Width="380">

            <!-- Preset -->
            <ComboBox x:Name="cboPreset"
                      ItemsSource="{Binding Preset_Items}"
                      SelectedIndex="{Binding Preset_SelectedIndex}"
                      SelectedValue="{Binding Preset_SelectedItem}"
                      IsEnabled="{Binding Preset_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Style="{DynamicResource ComboBoxWhite}" 
                      ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}" 
                      HorizontalAlignment="Right"
                      Margin="0,0,300,0" 
                      VerticalAlignment="Top" 
                      Width="75" 
                      SelectionChanged="cboPreset_SelectionChanged"/>

            <!-- Preview Button -->
            <Button x:Name="btnPreview"
                    Style="{DynamicResource ButtonCustom}" 
                    HorizontalAlignment="Right" 
                    Margin="0,0,87,0" 
                    VerticalAlignment="Top"
                    Width="75" 
                    Height="22"
                    Cursor="Hand" Click="btnPreview_Click">
                <TextBlock x:Name="btnPreviewTextBlock" 
                           Text="Preview"
                           Margin="0,-2,0,0"/>
            </Button>

            <!-- Convert Button -->
            <Button x:Name="btnConvert"
                    Style="{DynamicResource ButtonCustom}" 
                    HorizontalAlignment="Right" 
                    Margin="0,0,4,0" 
                    VerticalAlignment="Top"
                    Width="75" 
                    Height="22"
                    Cursor="Hand" Click="btnConvert_Click">
                <TextBlock x:Name="btnConvertTextBlock" 
                           Text="Convert"
                           Margin="0,-2,0,0"/>
            </Button>

            <!-- Batch Checkbox -->
            <ToggleButton x:Name="tglBatch" 
                          IsChecked="{Binding Batch_IsChecked, Mode=TwoWay}"
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Top" 
                          Checked="tglBatch_Checked" 
                          Unchecked="tglBatch_Unchecked" 
                          Cursor="Hand" 
                          ToolTip="Enable, Browse for folder, Enter file extention to batch process."
                          Width="45"
                          Height="22"
                          Style="{DynamicResource ToggleButtonCustom}"
                          Margin="0,0,241,0">
                <TextBlock x:Name="batchTextBlock" 
                           Style="{DynamicResource TextBlockCustom}" 
                           Text="Batch"
                           Margin="0,-2,0,0" />
            </ToggleButton>
            <!-- Batch Textbox -->
            <TextBox x:Name="batchExtensionTextBox" 
                     Text="{Binding BatchExtension_Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding BatchExtension_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     HorizontalAlignment="Right" 
                     Height="23" 
                     Margin="0,0,176,0" 
                     TextWrapping="NoWrap"
                     Padding="2, 1, 0, 0" 
                     VerticalAlignment="Top" 
                     Width="60" 
                     TextChanged="batchExtension_TextChanged"
                     Style="{DynamicResource TextBoxCustom}" 
                     ToolTipService.InitialShowDelay="1000" 
                     ToolTipService.ShowOnDisabled="True" 
                     ToolTip="File Extension in Folder to Batch Process (e.g. mp4)"/>

        </Grid>








    </Grid>
</Window>
