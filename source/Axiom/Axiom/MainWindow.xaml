                                           Height="11" 
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" 
                                           Style="{DynamicResource ButtonRevertArrow}" />
                            </Button>

                            <!-- Log Path TextBox -->
                            <Label x:Name="labelLogConfig" 
