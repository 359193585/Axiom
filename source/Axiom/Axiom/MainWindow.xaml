                                RenderTransformOrigin="-3.349,0.72" Grid.Row="6" />

                            <ToggleButton x:Name="tglAudioLimiter"
                                          Style="{DynamicResource ToggleButtonSmall}"
                                          Content="Limit"
                                          HorizontalAlignment="Left"
                                          Margin="65,2,0,0" 
                                          VerticalAlignment="Top"
                                          Cursor="Hand"
                                          ToolTipService.ShowOnDisabled="True" 
                                          ToolTip="Turn Limiter On or Off" 
                                          Width="34" 
                                          Height="22" 
                                          Checked="tglAudioLimiter_Checked"
                                          Unchecked="tglAudioLimiter_Unchecked" Grid.Column="1" Grid.Row="6"/>

                            <TextBox x:Name="audioLimiter"
                                     Style="{DynamicResource TextBoxCustom}"
                                     HorizontalAlignment="Left"
                                     Height="22"
                                     Margin="0,2,0,0" 
                                     Padding="2, 1, 0, 0"
                                     TextWrapping="NoWrap" 
                                     VerticalAlignment="Top"
                                     Width="60" 
                                     MaxLines="1"
                                     MaxLength="11"
                                     ToolTipService.InitialShowDelay="1000" 
                                     ToolTipService.ShowOnDisabled="True"
                                     ToolTip="Prevents audio from rising over a desired threshold, [0.0625 - 1]." 
                                     IsEnabled="False" Grid.Column="1" Grid.Row="6"/>

                        </Grid>

                    </ScrollViewer>
                </Grid>
            </TabItem>

