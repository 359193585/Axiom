                                     HorizontalAlignment="Left" 
                                     Height="20"
                                     Margin="10,2,0,0" 
                                     TextWrapping="Wrap" 
                                     VerticalAlignment="Top"
                                     Width="105"
                                     IsReadOnly="True" 
                                     PreviewMouseDown="textBoxFFplayPathConfig_PreviewMouseDown"
                                     TextChanged="textBoxFFplayPathConfig_TextChanged"
                                     ToolTip="Path to FFplay.exe" 
                                     Grid.Column="2" 
                                     Grid.Row="2"/>

