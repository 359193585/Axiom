        <!-- Tool Buttons Grid -->
        <Grid HorizontalAlignment="Left" 
              Width="339" 
              Height="35" 
              VerticalAlignment="Bottom" 
              Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="28"/>
            </Grid.ColumnDefinitions>



            <!-- Info Button -->
            <Button x:Name="buttonInfo" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonInfo_Click" Background="{x:Null}" Style="{DynamicResource ButtonSmallCustom}" ToolTip="About this program">
                <Image Width="5" Height="10" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,0,0,0" Style="{DynamicResource ButtonInfo}"/>
            </Button>

            <!-- Website Button -->
            <Button x:Name="buttonWebsite" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonWebsite_Click" Background="{x:Null}" Style="{DynamicResource ButtonSmallCustom}" ToolTip="Visit Website" Grid.Column="1">
                <Image Width="11" Height="11" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,-1,0,0" Style="{DynamicResource ButtonWebsite}" />
            </Button>

            <!-- Update Button -->
            <Button x:Name="buttonUpdate" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Background="{x:Null}" Style="{DynamicResource ButtonSmallCustom}" ToolTip="Check for Updates" Click="buttonUpdate_Click" Grid.Column="2">
                <Image Width="10" Height="10" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Style="{DynamicResource ButtonUpdate}" />
            </Button>

            <!-- Configure Button -->
            <!--<Button x:Name="buttonConfigure" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonConfigure_Click" Background="{x:Null}" Style="{DynamicResource ButtonSmallCustom}" ToolTip="Configure Settings and Paths" Grid.Column="3">
                <Image Width="11" Height="11" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-1,0,0" Cursor="Hand" Style="{DynamicResource ButtonConfigure}"/>
            </Button>-->

            <!-- Window Toggle  -->
            <ToggleButton x:Name="tglWindowKeep" Cursor="Hand" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="Keep FFmpeg window open after converting." Width="22" Height="22" Style="{DynamicResource ToggleButtonCustom}" Checked="tglWindowKeep_Checked" Unchecked="tglWindowKeep_Unchecked" Grid.Column="3">
                <Image Width="10" Height="10" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Style="{DynamicResource ButtonWindow}" />
            </ToggleButton>

            <!-- Debug Console -->
            <Button x:Name="buttonDebugConsole" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonDebugConsole_Click" Background="{x:Null}" Style="{DynamicResource ButtonSmallCustom}" ToolTip="Show Debug Console" Grid.Column="4" Margin="1,0,0,0">
                <Image Width="12" Height="10" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-1,0,0,0" Style="{DynamicResource ButtonDebugConsole}" />
            </Button>

            <!-- Log Console -->
            <Button x:Name="buttonLogConsole" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonLogConsole_Click" Background="{x:Null}" Style="{DynamicResource ButtonSmallCustom}" ToolTip="Show Log Console" Grid.Column="5">
                <Image Width="10" Height="11" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Style="{DynamicResource ButtonLogConsole}" />
            </Button>

            <!-- Log Button -->
            <Button x:Name="buttonLog" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonLog_Click" ToolTip="View the last Output Log" Background="{x:Null}" Style="{DynamicResource ButtonSmallCustom}" Grid.Column="6">
                <Image Width="9" Height="11" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-1,0,0" Style="{DynamicResource ButtonLog}" />
            </Button>

            <!-- CMD Button -->
            <Button x:Name="buttonCmd" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonCmd_Click" Background="{x:Null}" Style="{DynamicResource ButtonSmallCustom}" ToolTip="Launch Command Prompt" Grid.Column="7">
                <Image Width="11" Height="11" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Style="{DynamicResource ButtonCMD}" />
            </Button>

            <!-- Properties Button -->
            <Button x:Name="buttonProperties" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonProperties_Click" Background="{x:Null}" Style="{DynamicResource ButtonSmallCustom}" ToolTip="View File Properties" Grid.Column="8">
                <Image Width="10" Height="11" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Style="{DynamicResource ButtonProperties}" />
            </Button>

            <!-- Play File -->
            <Button x:Name="buttonPlayFile" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonPlayFile_Click" Background="{x:Null}" Style="{DynamicResource ButtonSmallCustom}" ToolTip="Play Converted File" Grid.Column="9">
                <Image Width="11" Height="11" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-1,0,0,0" Style="{DynamicResource ButtonPlay}" />
            </Button>

        </Grid>





        <!-- Process Buttons Grid -->
        <Grid Margin="0,0,10,0" 
              Height="35" 
              VerticalAlignment="Bottom" 
              HorizontalAlignment="Right" 
              Width="378">

            <!-- Preset -->
            <ComboBox x:Name="cboPreset"
                      Style="{DynamicResource ComboBoxWhite}" 
                      ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}" 
                      HorizontalAlignment="Right"
                      Margin="0,0,219,0" 
                      VerticalAlignment="Top" 
                      Width="75" 
                      SelectionChanged="cboPreset_SelectionChanged"  >
                <System:String>Preset</System:String>
                <!-- <System:String>Custom</System:String> -->
                <System:String>DVD</System:String>
                <System:String>Blu-ray</System:String>
                <System:String>HD Video</System:String>
                <System:String>SD Video</System:String>
                <System:String>HTML5</System:String>
                <System:String>Win Phone</System:String>
                <System:String>Android</System:String>
                <System:String>iOS</System:String>
                <System:String>iTunes</System:String>
                <System:String>PS3</System:String>
                <System:String>PS4</System:String>
                <System:String>Xbox 360</System:String>
                <System:String>Xbox One</System:String>
                <System:String>Debug</System:String>
            </ComboBox>

            <!-- Convert Button -->
            <Button x:Name="btnConvert" Style="{DynamicResource ButtonCustom}" HorizontalAlignment="Right" Margin="209,0,0,0" VerticalAlignment="Top" Width="75" Height="22" Cursor="Hand" Click="btnConvert_Click">
                <TextBlock x:Name="btnConvertTextBlock" Text="Convert" Margin="0,-2,0,0"/>
            </Button>

            <!-- Batch Checkbox -->
            <ToggleButton x:Name="tglBatch" HorizontalAlignment="Right" VerticalAlignment="Top" Checked="tglBatch_Checked" Unchecked="tglBatch_Unchecked" IsChecked="False" Cursor="Hand" ToolTip="Enable, Browse for folder, Enter file extention to batch process." Width="45" Height="22" Style="{DynamicResource ToggleButtonCustom}" Margin="0,0,150,0">
                <TextBlock x:Name="batchTextBlock" Style="{DynamicResource TextBlockCustom}" Text="Batch" Margin="0,-2,0,0" />
            </ToggleButton>
            <!-- Batch Textbox -->
            <TextBox x:Name="batchExtensionTextBox" 
                     HorizontalAlignment="Right" 
                     Height="23" 
                     Margin="0,0,85,0" 
                     TextWrapping="NoWrap"
                     Padding="2, 1, 0, 0" 
                     Text="extension" 
                     VerticalAlignment="Top" 
                     Width="60" 
                     TextChanged="batchExtension_TextChanged"
                     Style="{DynamicResource TextBoxCustom}" 
                     ToolTipService.InitialShowDelay="1000" 
                     ToolTipService.ShowOnDisabled="True" 
                     ToolTip="File Extension in Folder to Batch Process (e.g. mp4)"/>

        </Grid>






        <!-- Input / Output Grid -->
        <Grid Height="56" VerticalAlignment="Top" Margin="10,10,295,0">

            <!-- Browse Button -->
            <Button x:Name="btnInput" 
                    Style="{DynamicResource ButtonCustom}" 
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Width="70" 
                    Height="22" 
                    Cursor="Hand" 
                    Click="btnInput_Click">
                <TextBlock Text="Input" Margin="0,-2,0,0"/>
            </Button>

            <!-- Browse Textbox -->
            <TextBox x:Name="tbxInput" 
                     Style="{DynamicResource TextBoxBrowseCustom}" 
                     Height="22"
                     Margin="75,0,-14,0" 
                     Padding="2, 0, 25, 0" 
                     TextWrapping="NoWrap"
                     MaxLines="1" 
                     VerticalAlignment="Top" 
                     TextChanged="tbxInput_TextChanged"/>

            <!-- Input Location Button -->
            <Button x:Name="openLocationInput" 
                    Style="{DynamicResource ButtonFolderCustom}" 
                    Margin="0,1,-11,0"
                    Cursor="Hand"
                    Click="openLocationInput_Click"
                    ToolTip="Open this location"
                    HorizontalAlignment="Right"
                    Width="22" 
                    Height="20" 
                    VerticalAlignment="Top">
                <Image Width="11" 
                       Height="7" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="1,0,0,0" 
                       Style="{DynamicResource ButtonQuickFolder}" />
            </Button>

            <!-- Output Button -->
            <Button x:Name="btnOutput" 
                    Style="{DynamicResource ButtonCustom}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="70" 
                    Height="22" 
                    Cursor="Hand" 
                    Click="btnOutput_Click" 
                    Margin="0,29,0,0">
                <TextBlock Text="Output" Margin="0,-2,0,0"/>
            </Button>
            <!-- Output Textbox-->
            <TextBox x:Name="tbxOutput" 
                     Style="{DynamicResource TextBoxBrowseCustom}"
                     Height="22"
                     Margin="75,29,-14,0"
                     Padding="2, 0, 25, 0" 
                     TextWrapping="NoWrap" 
                     MaxLines="1" 
                     VerticalAlignment="Top" 
                     TextChanged="tbxOutput_TextChanged"/>

            <!-- Output Location Button -->
            <Button x:Name="openLocationOutput"
                    Style="{DynamicResource ButtonFolderCustom}" 
                    Cursor="Hand" 
                    Click="openLocationOutput_Click" 
                    ToolTip="Open this location"
                    HorizontalAlignment="Right"
                    Width="22" 
                    Height="20" 
                    VerticalAlignment="Top"
                    Margin="0,30,-11,0">
                <Image Width="11"
                       Height="7" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="1,0,0,0"
                       Style="{DynamicResource ButtonQuickFolder}" />
            </Button>

        </Grid>




        <!-- Output Grid -->
        <!--<Grid Margin="0,10,10,0" HorizontalAlignment="Right" Width="290" Height="25" VerticalAlignment="Top">
        </Grid>-->


        <!-- Tab Control -->
        <TabControl x:Name="tabControl" 
                    HorizontalAlignment="Right" 
                    Width="260" 
                    Margin="0,10,10,56"
                    Background="Transparent">

            <!-- Format Tab -->
            <TabItem Header="Format" 
                     Width="62"
                     Style="{DynamicResource TabItemStyle}">
                <Grid Background="Transparent">

                    <!-- Scroll Viewer -->
                    <ScrollViewer HorizontalAlignment="Right" 
                                  Width="254"
                                  Template="{DynamicResource ScrollViewerControlTemplate}">

                        <!-- Grid -->
                        <Grid Margin="0,15,0,30"  
                              VerticalAlignment="Top" >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="31"/>
                            </Grid.RowDefinitions>

                            <!-- Container -->
                            <Label 
                            Style="{DynamicResource LabelCustom}"
                            Content="Container" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Width="75" 
                            
                            FontFamily="Segoe UI Semilight"
                            Margin="20,0,0,0" Height="26" />

                            <ComboBox x:Name="cboFormat"
                                  Style="{DynamicResource ComboBoxWhite}" 
                                  ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}"
                                  HorizontalAlignment="Left" 
                                  Margin="0,3,0,0" 
                                  VerticalAlignment="Top" 
                                  Width="100" 
                                  ToolTipService.InitialShowDelay="1000" 
                                  ToolTipService.ShowOnDisabled="True" 
                                  ToolTip="Container" 
                                  SelectionChanged="cboFormat_SelectionChanged" Grid.Column="1" Height="22" />

                            <!-- MediaType -->
                            <Label 
                            Style="{DynamicResource LabelCustom}"
                            Content="Media" 
                            HorizontalAlignment="Left"
                            Margin="20,0,0,0" 
                            VerticalAlignment="Top" 
                            Width="75" 
                            
                            FontFamily="Segoe UI Semilight" Grid.Row="1" Height="26" />

                            <ComboBox x:Name="cboMediaType" 
                                  Style="{DynamicResource ComboBoxCustom}"
                                  ItemContainerStyle="{DynamicResource ComboBoxCustomItem}" 
                                  HorizontalAlignment="Left"
                                  Margin="0,3,0,0" 
                                  VerticalAlignment="Top" 
                                  Width="100"
                                  SelectionChanged="cboMediaType_SelectionChanged" 
                                  ToolTipService.InitialShowDelay="1000" 
                                  ToolTipService.ShowOnDisabled="True"
                                  ToolTip="Media Type" Grid.Row="1" Grid.Column="1" Height="22"/>

                            <!-- Video Codec -->
                            <Label 
                            Style="{DynamicResource LabelCustom}"
                            Content="Video Codec" 
                            HorizontalAlignment="Left"
                            Margin="20,0,0,0" 
                            VerticalAlignment="Top" 
                            Width="75" 
                            
                            FontFamily="Segoe UI Semilight" Grid.Row="2" Height="26" />

                            <ComboBox x:Name="cboVideoCodec" 
                                  Style="{DynamicResource ComboBoxCustom}" 
                                  ItemContainerStyle="{DynamicResource ComboBoxCustomItem}"
                                  HorizontalAlignment="Left" 
                                  Margin="0,3,0,0"
                                  VerticalAlignment="Top"
                                  Width="100" 
                                  SelectionChanged="cboVideoCodec_SelectionChanged" 
                                  ToolTipService.InitialShowDelay="1000" 
                                  ToolTipService.ShowOnDisabled="True" 
                                  ToolTip="Video Codec" Grid.Row="2" Grid.Column="1" Height="22" />

                            <!-- Audio Codec -->
                            <Label 
                            Style="{DynamicResource LabelCustom}"
                            Content="Audio Codec" 
                            HorizontalAlignment="Left"
                            Margin="20,0,0,0" 
                            VerticalAlignment="Top" 
                            Width="85" 
                            
                            FontFamily="Segoe UI Semilight" Grid.Row="3" Height="26" />

                            <ComboBox x:Name="cboAudioCodec" 
                                  Style="{DynamicResource ComboBoxCustom}"
                                  ItemContainerStyle="{DynamicResource ComboBoxCustomItem}"
                                  HorizontalAlignment="Left" 
                                  Margin="0,3,0,0" 
                                  VerticalAlignment="Top" 
                                  Width="100" 
                                  SelectionChanged="cboAudioCodec_SelectionChanged"  
                                  ToolTipService.InitialShowDelay="1000" 
                                  ToolTipService.ShowOnDisabled="True" 
                                  ToolTip="Audio Codec" Grid.Row="3" Grid.Column="1" Height="22" />

                            <!-- Optimize -->
                            <Label 
                                Style="{DynamicResource LabelCustom}" 
                                Content="Optimize"
                                HorizontalAlignment="Left" 
                                Margin="20,0,0,0" 
                                VerticalAlignment="Top"
                                Width="75"
                                 
                                FontFamily="Segoe UI Semilight" Grid.Row="4" Height="26" />

                            <ComboBox x:Name="cboOptimize" 
                                      Style="{DynamicResource ComboBoxCustom}"
                                      ItemContainerStyle="{DynamicResource ComboBoxCustomItem}"
                                      HorizontalAlignment="Left" 
                                      Margin="0,3,0,0" 
                                      VerticalAlignment="Top" 
                                      Width="100" 
                                      SelectionChanged="cboOptimize_SelectionChanged" 
                                      DropDownClosed="cboOptimize_DropDownClosed"
                                      ToolTipService.ShowOnDisabled="True" 
                                      ToolTip="Optimize file for device type." Grid.Row="4" Grid.Column="1" Height="22" />

                            <!-- Speed -->
                            <Label 
                                Style="{DynamicResource LabelCustom}" 
                                Content="Speed" 
                                HorizontalAlignment="Left" 
                                Margin="20,0,0,0" 
                                VerticalAlignment="Top"
                                Width="75" 
                                
                                FontFamily="Segoe UI Semilight" Grid.Row="5" Height="26" />

                            <ComboBox x:Name="cboSpeed" 
                                      Style="{DynamicResource ComboBoxCustom}" 
                                      ItemContainerStyle="{DynamicResource ComboBoxCustomItem}" 
                                      HorizontalAlignment="Left" 
                                      Margin="0,3,0,0" 
                                      VerticalAlignment="Top" 
                                      Width="100" 
                                      ToolTipService.InitialShowDelay="1000" 
                                      ToolTipService.ShowOnDisabled="True" 
                                      ToolTip="Encoding Speed. Slower = Better Quality &amp; Compression." Grid.Row="5" Grid.Column="1" Height="22" >
                                <System:String>Placebo</System:String>
                                <System:String>Very Slow</System:String>
                                <System:String>Slower</System:String>
                                <System:String>Slow</System:String>
                                <System:String>Medium</System:String>
                                <System:String>Fast</System:String>
