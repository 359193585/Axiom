            <!-- Settings Tab -->
            <TabItem Header="Settings"
                      Width="62"
                     Style="{DynamicResource TabItemStyle}">

                <Grid Background="Transparent">

                    <ScrollViewer HorizontalAlignment="Right"
                                  Width="254"
                                  Template="{DynamicResource ScrollViewerControlTemplate}" Grid.ColumnSpan="2" Grid.RowSpan="6">

                        <Grid Margin="0,15,0,30"  
                              VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="31"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="22*"/>
                                <ColumnDefinition Width="57*"/>
                            </Grid.ColumnDefinitions>

                            <!-- FFmpeg Path TextBox -->
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="FFmpeg" 
                                   HorizontalAlignment="Left" 
                                   Margin="13,0,0,0" 
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to FFmpeg.exe"/>
                            <TextBox x:Name="textBoxFFmpegPathConfig" 
                                     Style="{DynamicResource TextBoxBrowseCustom}"
                                     HorizontalAlignment="Left" 
                                     Height="20"
                                     Margin="10,3,0,0" 
                                     TextWrapping="Wrap" 
                                     VerticalAlignment="Top"
                                     Width="123"
                                     IsReadOnly="True" 
                                     PreviewMouseDown="textBoxFFmpegPathConfig_PreviewMouseDown"
                                     TextChanged="textBoxFFmpegPathConfig_TextChanged"
                                     ToolTip="Path to FFmpeg.exe" Grid.Column="1"/>

                            <!-- FFmpeg Path Revert Button -->
                            <Button x:Name="buttonFFmpegAuto"
                                    HorizontalAlignment="Left"
                                    Margin="138,1,0,0" 
                                    VerticalAlignment="Top"
                                    Width="23" 
                                    Height="23" 
                                    Cursor="Hand"
                                    ToolTip="Revert to Auto"
                                    Click="buttonFFmpegAuto_Click"
                                    Style="{DynamicResource ButtonFolderCustom}" Grid.Column="1" >
                                <Image Width="9" 
                                       Height="11" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" 
                                       Style="{DynamicResource ButtonRevertArrow}" />
                            </Button>

                            <!-- FFprobe Path TextBox -->
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="FFprobe" 
                                   HorizontalAlignment="Left" 
                                   Margin="13,0,0,0" 
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to FFprobe.exe" Grid.Row="1"/>
                            <TextBox x:Name="textBoxFFprobePathConfig" 
                                     Style="{DynamicResource TextBoxBrowseCustom}"
                                     HorizontalAlignment="Left" 
                                     Height="20"
                                     Margin="10,3,0,0" 
                                     TextWrapping="Wrap" 
                                     VerticalAlignment="Top"
                                     Width="123"
                                     IsReadOnly="True" 
                                     PreviewMouseDown="textBoxFFprobePathConfig_PreviewMouseDown"
                                     TextChanged="textBoxFFprobePathConfig_TextChanged"
                                     ToolTip="Path to FFprobe.exe" Grid.Column="1" Grid.Row="1"/>

                            <!-- FFprobe Path Revert Button -->
                            <Button x:Name="buttonFFprobeAuto"
                                    HorizontalAlignment="Left"
                                    Margin="138,2,0,0" 
                                    VerticalAlignment="Top"
                                    Width="23" 
                                    Height="23" 
                                    Cursor="Hand"
                                    ToolTip="Revert to Auto"
                                    Click="buttonFFprobeAuto_Click"
                                    Style="{DynamicResource ButtonFolderCustom}" Grid.Column="1" Grid.Row="1" >
                                <Image Width="9" 
                                       Height="11" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" 
                                       Style="{DynamicResource ButtonRevertArrow}" />
                            </Button>

                            <!-- Log Path TextBox -->
                            <Label x:Name="labelLogConfig" 
                                   Style="{DynamicResource LabelCustom}" 
                                   Content="Log" 
                                   HorizontalAlignment="Left" 
                                   Margin="13,0,0,0"
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to Save Log" Grid.Row="2"/>
                            <TextBox x:Name="textBoxLogConfig" 
                                     Style="{DynamicResource TextBoxBrowseCustom}" 
                                     HorizontalAlignment="Left" 
                                     Height="20" 
                                     Margin="10,3,0,0" 
                                     TextWrapping="Wrap"
                                     VerticalAlignment="Top"
                                     Width="123"
                                     IsReadOnly="True" 
                                     PreviewMouseDown="textBoxLogConfig_PreviewMouseDown" 
                                     ToolTipService.ShowOnDisabled="True" 
                                     ToolTip="Path to save output log." 
                                     IsEnabled="{Binding IsChecked, ElementName=checkBoxLogConfig}" Grid.Column="1" Grid.Row="2"/>

                            <!-- Log Revert Button -->
                            <Button x:Name="buttonLogAuto" 
                                    HorizontalAlignment="Left" 
                                    Margin="138,2,0,0" 
                                    VerticalAlignment="Top"
                                    Width="23"
                                    Height="23" 
                                    Cursor="Hand"
                                    ToolTip="Clear Path" 
                                    Click="buttonLogAuto_Click" 
                                    Style="{DynamicResource ButtonFolderCustom}" Grid.Column="1" Grid.Row="2">
                                <Image Width="9"
                                       Height="11" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" 
                                       Margin="1,0,0,0" 
                                       Style="{DynamicResource ButtonRevertArrow}" />
                            </Button>

                            <!-- Log Enable/Disable Checkbox -->
                            <CheckBox x:Name="checkBoxLogConfig" 
                                      Content=""
                                      HorizontalAlignment="Left" 
                                      Margin="45,6,0,0" 
                                      VerticalAlignment="Top" 
                                      ToolTip="Enable/Disable Log"
                                      Checked="checkBoxLogConfig_Checked" 
                                      Unchecked="checkBoxLogConfig_Unchecked" 
                                      Style="{DynamicResource CheckBoxCustom}" Grid.Row="2"/>

                            <!-- Threads -->
                            <Label x:Name="labelThreads"
                                   Style="{DynamicResource LabelCustom}"
                                   Content=" Threads" 
                                   HorizontalAlignment="Left"
                                   Margin="10,0,0,0" 
                                   VerticalAlignment="Top" 
                                   Height="26" 
                                   ToolTip="Path to Save Log" Grid.Row="3"/>
                            <ComboBox x:Name="cboThreads"
                                      Style="{DynamicResource ComboBoxCustom}" 
                                      ItemContainerStyle="{DynamicResource ComboBoxCustomItem}"
                                      HorizontalAlignment="Left" 
                                      Margin="33,3,0,0" 
                                      VerticalAlignment="Top" 
                                      Width="100" 
                                      IsTextSearchEnabled="False" 
                                      SelectionChanged="threadSelect_SelectionChanged" 
                                      KeyDown="threadSelect_KeyDown" Grid.Column="1" Grid.Row="3">
                                <System:String>off</System:String>
                                <System:String>all</System:String>
                                <System:String>1</System:String>
                                <System:String>2</System:String>
                                <System:String>3</System:String>
                                <System:String>4</System:String>
                                <System:String>5</System:String>
                                <System:String>6</System:String>
                                <System:String>7</System:String>
                                <System:String>8</System:String>
                                <!-- <System:String>Custom</System:String> -->
                            </ComboBox>

                            <!-- Theme -->
                            <Label x:Name="labelTheme" 
                                   Style="{DynamicResource LabelCustom}" 
                                   Content="Theme" 
                                   HorizontalAlignment="Left"
                                   Margin="13,0,0,0"
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to Save Log" Grid.Row="4"/>
                            <ComboBox x:Name="cboTheme" 
                                      Style="{DynamicResource ComboBoxCustom}"
                                      ItemContainerStyle="{DynamicResource ComboBoxCustomItem}" 
                                      HorizontalAlignment="Left"
                                      Margin="33,3,0,0" VerticalAlignment="Top" 
                                      Width="100"
                                      IsTextSearchEnabled="False"
                                      SelectionChanged="themeSelect_SelectionChanged" Grid.Column="1" Grid.Row="4">
                                <System:String>Axiom</System:String>
                                <System:String>FFmpeg</System:String>
                                <System:String>Cyberpunk</System:String>
                                <System:String>Onyx</System:String>
                                <System:String>Circuit</System:String>
                                <!--<System:String>Prelude</System:String>-->
                                <System:String>System</System:String>
                            </ComboBox>

                            <!-- Reset Saved Settings -->
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="Settings"
                                   HorizontalAlignment="Left"
                                   Margin="13,0,0,0"
                                   VerticalAlignment="Top" 
                                   Height="26" Grid.Row="5" />

                            <!-- Reset Saved Settings Button -->
                            <Button x:Name="buttonClearAllSavedSettings"
                                    HorizontalAlignment="Left"
                                    Margin="18,2,0,0" 
                                    VerticalAlignment="Top"
                                    Width="55" 
                                    Background="{x:Null}"
                                    Height="23" 
                                    ToolTip="Reset the Saved Settings to Default." 
                                    Cursor="Hand" 
                                    Click="buttonClearAllSavedSettings_Click" 
                                    Style="{DynamicResource ButtonSmallCustom}" Grid.Column="1" Grid.Row="5">
                                <TextBlock Style="{DynamicResource TextBlockCustom}" 
                                           Text="Reset" 
                                           Margin="0,-1,0,0"/>
                            </Button>

                            <!-- Delete Saved Settings Button -->
                            <Button x:Name="buttonDeleteSettings"
                                    HorizontalAlignment="Left"
                                    Margin="78,2,0,0"
                                    VerticalAlignment="Top"
                                    Width="55" Background="{x:Null}" 
                                    Height="23"
                                    ToolTip="Delete the Settings File in AppData." 
                                    Cursor="Hand" 
                                    Style="{DynamicResource ButtonSmallCustom}" 
                                    Click="buttonDeleteSettings_Click" Grid.Column="1" Grid.Row="5">
                                <TextBlock Style="{DynamicResource TextBlockCustom}" 
                                           Text="Delete" Margin="0,-1,0,0"/>
                            </Button>
                        </Grid>


                    </ScrollViewer>

                </Grid>

            </TabItem>


        </TabControl>






        <!-- File Queue
        <Button x:Name="buttonFileQueue" HorizontalAlignment="Left" Margin="-135,233,0,0" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Background="{x:Null}" Style="{DynamicResource ButtonSmallCustom}" ToolTip="Show File Queue" Click="buttonFileQueue_Click">
            <Image Source="Resources/Images/logconsole.png" Width="10" Height="11" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
        </Button> -->

    </Grid>
</Window>
