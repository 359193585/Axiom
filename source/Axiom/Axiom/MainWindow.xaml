                                   Content="HW Accel" 
                                   HorizontalAlignment="Left"
                                   Margin="10,0,0,0" 
                                   VerticalAlignment="Top" 
                                   Height="26" 
                                   ToolTip="Path to Save Log"
                                   Grid.Row="5"/>
                            <ToggleButton x:Name="tglHWAccel" 
