                                          Width="58" 
                                          Height="22" 
                                          Grid.Row="5" 
                                          Grid.Column="1"
                                          Margin="0,2,0,0" 
                                          Checked="tglHWAccel_Checked" 
                                          Unchecked="tglHWAccel_Unchecked"/>-->

                            <!-- Theme -->
                            <Label x:Name="labelTheme" 
                                   Style="{DynamicResource LabelCustom}" 
                                   Content="Theme" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to Save Log" 
                                   Grid.Row="6" Grid.Column="1"/>
                            <ComboBox x:Name="cboTheme" 
                                      Style="{DynamicResource ComboBoxCustom}"
                                      ItemContainerStyle="{DynamicResource ComboBoxCustomItem}" 
                                      HorizontalAlignment="Left" VerticalAlignment="Top" 
                                      Width="105"
                                      IsTextSearchEnabled="False"
                                      SelectionChanged="themeSelect_SelectionChanged" 
                                      Grid.Column="2" 
                                      Grid.Row="6"
                                      Margin="10,2,0,0">
                                <System:String>Axiom</System:String>
                                <System:String>FFmpeg</System:String>
                                <System:String>Cyberpunk</System:String>
                                <System:String>Onyx</System:String>
                                <System:String>Circuit</System:String>
                                <!--<System:String>Prelude</System:String>-->
                                <System:String>System</System:String>
                            </ComboBox>

                            <!-- Check for Updates -->
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="Updates" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to Save Log" 
                                   Grid.Row="8" Grid.Column="1"/>
                            <!-- Window Toggle  -->
                            <ToggleButton x:Name="tglUpdatesAutoCheck"
                                          Cursor="Hand" 
                                          HorizontalAlignment="Left" 
                                          VerticalAlignment="Top" 
                                          ToolTip="Automatically check for updates at startup." 
                                          Width="58" 
                                          Height="22" 
                                          Style="{DynamicResource ToggleButtonCustom}" 
                                          Checked="tglUpdatesAutoCheck_Checked"
                                          Unchecked="tglUpdatesAutoCheck_Unchecked"
                                          Grid.Column="2" 
                                          Grid.Row="8" 
                                          Margin="10,2,0,0">
                                <TextBlock x:Name="tblkUpdatesAutoCheck" 
                                           Style="{DynamicResource TextBlockCustom}" 
                                           Text="Off"
                                           Margin="0,-2,0,0" />
                            </ToggleButton>
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="Check" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Height="26" 
                                   ToolTip="Path to Save Log" 
                                    Grid.Column="2" 
                                    Grid.Row="8" 
                                    Margin="73,0,0,0"/>

                            <!-- Reset Saved Settings -->
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="Settings"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top" 
                                   Height="26" 
                                   Grid.Row="10" Grid.Column="1" />

                            <!-- Reset Saved Settings Button -->
                            <Button x:Name="buttonClearAllSavedSettings"
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top"
                                    Width="55" 
                                    Background="{x:Null}"
                                    Height="23" 
                                    ToolTip="Reset the Saved Settings to Default." 
                                    Cursor="Hand" 
                                    Click="buttonClearAllSavedSettings_Click" 
                                    Style="{DynamicResource ButtonSmallCustom}" 
                                    Grid.Column="2" 
                                    Grid.Row="10" Margin="10,2,0,0">
                                <TextBlock Style="{DynamicResource TextBlockCustom}" 
                                           Text="Reset" 
                                           Margin="0,-1,0,0"/>
                            </Button>

                            <!-- Delete Saved Settings Button -->
                            <Button x:Name="buttonDeleteSettings"
                                    HorizontalAlignment="Left"
                                    Margin="72,2,0,0"
                                    VerticalAlignment="Top"
                                    Width="55" 
                                    Background="{x:Null}" 
                                    Height="23"
                                    ToolTip="Delete the Settings File in AppData." 
                                    Cursor="Hand" 
                                    Style="{DynamicResource ButtonSmallCustom}" 
                                    Click="buttonDeleteSettings_Click" 
                                    Grid.Column="2" 
                                    Grid.Row="10">
                                <TextBlock Style="{DynamicResource TextBlockCustom}" 
                                           Text="Delete" Margin="0,-1,0,0"/>
                            </Button>
                        </Grid>


                    </ScrollViewer>

                </Grid>

            </TabItem>


