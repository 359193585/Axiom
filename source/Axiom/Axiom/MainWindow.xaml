                            <Button x:Name="buttonFFplayAuto"
                                            HorizontalAlignment="Left"
                                            Margin="122,1,0,0" 
                                            VerticalAlignment="Top"
                                            Width="23" 
                                            Height="23" 
                                            Cursor="Hand"
                                            ToolTip="Revert to Auto"
                                            Click="buttonFFplayAuto_Click"
                                            Style="{DynamicResource ButtonFolderCustom}" 
                                            Grid.Column="2" 
                                            Grid.Row="2" >
