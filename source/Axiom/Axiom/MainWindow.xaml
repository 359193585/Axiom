<Window x:Class="Axiom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib" 
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        xmlns:Themes1="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" 
        xmlns:my="clr-namespace:Axiom"
        xmlns:settings="clr-namespace:Axiom.Properties"
        mc:Ignorable="d"
        
        Loaded="Window_Loaded" 
        Closing="Window_Closing"  
        Icon="axiom.ico"
        
        RenderOptions.BitmapScalingMode="Fant"
        UseLayoutRounding="True"
        Height="432"
        Width="768"
        
        Top="{Binding Top, Source={x:Static settings:Settings.Default}, Mode=TwoWay}"
        Left="{Binding Left, Source={x:Static settings:Settings.Default}, Mode=TwoWay}" 
        Title="{Binding TitleVersion, RelativeSource={RelativeSource Mode=Self}}" 
        Style="{DynamicResource WindowStyleCustom}"
        >
    <Grid>

        <!-- Script View -->
        <TextBox x:Name="tbxScriptView" 
                 Text="{Binding ScriptView_Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Style="{DynamicResource TextBoxScriptView}"
                 FontSize="14" 
                 RenderOptions.ClearTypeHint="Enabled"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Margin="11,71,280,56" 
                 Padding="10,10,10,48"
                 Grid.ColumnSpan="1" >
        </TextBox>
        <!--<RichTextBox x:Name="rtbScriptView" 
                     Margin="11,71,280,56" 
                     Padding="10,10,10,48"
                     FontSize="14" 
                     Grid.ColumnSpan="1" 
                     VerticalScrollBarVisibility="Auto" 
                     RenderOptions.ClearTypeHint="Enabled"
                     Style="{DynamicResource RichTextBoxStyle}">
            <FlowDocument>
                <Paragraph>
                    <Run Text="{Binding ScriptView_Text, 
                                        Mode=TwoWay, 
                                        UpdateSourceTrigger=PropertyChanged}" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>-->

        <!-- Save Button -->
        <Button x:Name="btnScriptSave" 
                Style="{DynamicResource ButtonCustom}"
                Margin="21,0,0,66"
                Cursor="Hand"
                MaxWidth="60" 
                MaxHeight="22"
                MinWidth="60"
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="56" Click="btnScriptSave_Click">
            <TextBlock Text="Save" 
                       Margin="0,-2,0,0"/>
        </Button>

        <!-- Copy Button -->
        <Button x:Name="btnScriptCopy"
                Style="{DynamicResource ButtonCustom}"
                Margin="89,0,0,66"
                Cursor="Hand" 
                MaxWidth="60" 
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="54" Click="btnScriptCopy_Click">
            <TextBlock Text="Copy" 
                Margin="0,-2,0,0"/>
        </Button>

        <!-- Sort Button -->
        <Button x:Name="btnScriptSort"
                Style="{DynamicResource ButtonCustom}"
                Margin="157,0,0,66" 
                Cursor="Hand"
                MaxWidth="60"
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" 
                Width="53"
                Click="btnScriptSort_Click" >
            <TextBlock x:Name="txblScriptSort" 
                       Text="Sort"
                       Width="50"
                       Margin="0,-2,0,0"
                       TextAlignment="Center"/>
        </Button>

        <!-- Clear Button -->
        <Button x:Name="btnScriptClear"
                Style="{DynamicResource ButtonCustom}"
                Margin="225,0,0,66" 
                Cursor="Hand"
                MaxWidth="60"
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" 
                Width="53" Click="btnScriptClear_Click" >
            <TextBlock x:Name="txblScriptClear" 
                       Text="Clear"
                       Width="50"
                       Margin="0,-2,0,0"
                       TextAlignment="Center"/>
        </Button>

        <!-- Script Button -->
        <Button x:Name="btnScript" 
                Style="{DynamicResource ButtonCustom}" 
                HorizontalAlignment="Left"
                Margin="293,0,0,66"
                VerticalAlignment="Bottom"
                Width="60" 
                Height="22" 
                Cursor="Hand"
                ToolTip="Generate FFmpeg Commands" 
                Click="btnScript_Click">
            <TextBlock Text="Script" 
                       Margin="0,-2,0,0" />
        </Button>

        <!-- Run Button -->
        <Button x:Name="btnScriptRun"
                Style="{DynamicResource ButtonCustom}"
                Margin="361,0,0,66"
                Cursor="Hand" 
                MaxWidth="60" 
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Height="22" 
                ToolTipService.InitialShowDelay="1000" 
                ToolTipService.ShowOnDisabled="True"
                ToolTip="Run the customized Script." 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="54" 
                Click="btnScriptRun_Click">
            <TextBlock Text="Run" 
                Margin="0,-2,0,0"/>
        </Button>


        <!-- Input / Output Grid -->
        <Grid Height="56" 
              VerticalAlignment="Top" 
              Margin="10,10,295,0">

            <!-- Browse Button -->
            <Button x:Name="btnInput" 
                    Style="{DynamicResource ButtonCustom}" 
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Width="70" 
                    Height="22" 
                    Cursor="Hand" 
                    Click="btnInput_Click">
                <TextBlock Text="Input" Margin="0,-2,0,0"/>
            </Button>

            <!-- Browse Textbox -->
            <TextBox x:Name="tbxInput" 
                     Text="{Binding Input_Text, Mode=TwoWay}"
                     Style="{DynamicResource TextBoxBrowseCustom}" 
                     Height="22"
                     Margin="75,0,-14,0" 
                     Padding="2, 0, 25, 0" 
                     TextWrapping="NoWrap"
                     MaxLines="1" 
                     VerticalAlignment="Top" 
                     TextChanged="tbxInput_TextChanged"
                     AllowDrop="True"
                     PreviewDragOver="tbxInput_PreviewDragOver"
                     PreviewDragEnter="tbxInput_PreviewDragOver"
                     PreviewDrop="tbxInput_PreviewDrop"
                     />

            <!-- Input Location Button -->
            <Button x:Name="openLocationInput" 
                    Style="{DynamicResource ButtonFolderCustom}" 
                    Margin="0,1,-11,0"
                    Cursor="Hand"
                    Click="openLocationInput_Click"
                    ToolTip="Open this location"
                    HorizontalAlignment="Right"
                    Width="22" 
                    Height="20" 
                    VerticalAlignment="Top">
                <Image Width="11" 
                       Height="7" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="1,0,0,0" 
                       Style="{DynamicResource ButtonQuickFolder}" />
            </Button>

            <!-- Output Button -->
            <Button x:Name="btnOutput" 
                    Style="{DynamicResource ButtonCustom}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="70" 
                    Height="22" 
                    Cursor="Hand" 
                    Click="btnOutput_Click" 
                    Margin="0,29,0,0">
                <TextBlock Text="Output" Margin="0,-2,0,0"/>
            </Button>
            <!-- Output Textbox-->
            <TextBox x:Name="tbxOutput" 
                     Text="{Binding Output_Text, Mode=TwoWay}"
                     Style="{DynamicResource TextBoxBrowseCustom}"
                     Height="22"
                     Margin="75,29,-14,0"
                     Padding="2, 0, 25, 0" 
                     TextWrapping="NoWrap" 
                     MaxLines="1" 
                     VerticalAlignment="Top" 
                     TextChanged="tbxOutput_TextChanged"
                     
                     AllowDrop="True"
                     PreviewDragOver="tbxOutput_PreviewDragOver"
                     PreviewDragEnter="tbxOutput_PreviewDragOver"
                     PreviewDrop="tbxOutput_PreviewDrop"/>

            <!-- Output Location Button -->
            <Button x:Name="openLocationOutput"
                    Style="{DynamicResource ButtonFolderCustom}" 
                    Cursor="Hand" 
                    Click="openLocationOutput_Click" 
                    ToolTip="Open this location"
                    HorizontalAlignment="Right"
                    Width="22" 
                    Height="20" 
                    VerticalAlignment="Top"
                    Margin="0,30,-11,0">
                <Image Width="11"
                       Height="7" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="1,0,0,0"
                       Style="{DynamicResource ButtonQuickFolder}" />
            </Button>

        </Grid>


        <!-- Tab Control -->
        <TabControl x:Name="tabControl" 
                    HorizontalAlignment="Right" 
                    Width="260" 
                    Margin="0,10,10,56"
                    Background="Transparent">

            <!-- Format Tab -->
            <TabItem Header="Format" 
                     Width="85"
                     Style="{DynamicResource TabItemStyle}">
                <Grid Background="Transparent">

                    <!-- Scroll Viewer -->
                    <ScrollViewer HorizontalAlignment="Right" 
                                  Width="254"
                                  Template="{DynamicResource ScrollViewerControlTemplate}">

                        <!-- Grid -->
                        <Grid Margin="0,20,0,30"  
                              VerticalAlignment="Top" >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="96"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                            </Grid.RowDefinitions>

                            <!-- Container -->
                            <Label Style="{DynamicResource LabelCustom}"
                                    Content="Container" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top" 
                                    Width="86" 
                                    FontFamily="Segoe UI Semilight" 
                                    Height="26" 
                                   Grid.Column="1" />
                            <!--<ComboBox x:Name="cboContainer" 
                                      Style="{DynamicResource ComboBoxWhite}"
                                      ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}" 
                                      ItemsSource="{Binding Format_Container_Items}"
                                      SelectedIndex="{Binding Format_Container_SelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedItem="{Binding Format_Container_SelectedItem, Mode=TwoWay}"
                                      HorizontalAlignment="Left" 
                                      Margin="0,2,0,0" 
                                      VerticalAlignment="Top" 
                                      Width="105" 
                                      Height="22"
                                      SelectionChanged="cboContainer_SelectionChanged" 
                                      Grid.Column="2"/>-->
                            <ComboBox x:Name="cboContainer" 
                                      ItemsSource="{Binding Format_Container_Items}"
                                      SelectedIndex="{Binding Format_Container_SelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Name"
                                      SelectedValue="{Binding Format_Container_SelectedItem, Mode=TwoWay}"
                                      Style="{DynamicResource ComboBoxWhite}"
                                      ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}" 
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top" 
                                      Width="105" 
                                      Height="22"
                                      SelectionChanged="cboContainer_SelectionChanged" 
                                      Grid.Column="2" 
                                      Margin="0,2,0,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock DataContext="{Binding}">
                                                <TextBlock.Text>
                                                    <Binding Path="Name"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <!-- MediaType -->
                            <Label Style="{DynamicResource LabelCustom}"
                                   Content="Media" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   Width="86" 
                                   FontFamily="Segoe UI Semilight" 
                                   Grid.Row="1" 
                                   Height="26" 
                                   Grid.Column="1" />

                            <ComboBox x:Name="cboMediaType" 
                                      ItemsSource="{Binding Format_MediaType_Items}"
                                      SelectedIndex="{Binding Format_MediaType_SelectedIndex}"
                                      SelectedItem="{Binding Format_MediaType_SelectedItem, Mode=TwoWay}"
                                      IsEnabled="{Binding Format_MediaType_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource ComboBoxCustom}"
                                      ItemContainerStyle="{DynamicResource ComboBoxCustomItem}" 
                                      HorizontalAlignment="Left"
                                      Margin="0,2,0,0" 
                                      VerticalAlignment="Top" 
                                      Width="105"
                                      SelectionChanged="cboMediaType_SelectionChanged" 
                                      Grid.Row="1"
                                      Grid.Column="2"
                                      Height="22"/>

                            <!-- Encode Speed -->
                            <Label 
                                Style="{DynamicResource LabelCustom}" 
                                Content="Encode Speed" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"
                                Width="91" 
                                FontFamily="Segoe UI Semilight" 
                                Grid.Row="3" 
                                Height="26" Grid.Column="1" />

                            <ComboBox x:Name="cboEncodeSpeed" 
                                      Style="{DynamicResource ComboBoxWhite}"
                                      ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}" 
                                      ItemsSource="{Binding Video_EncodeSpeed_Items}"
                                      SelectedValuePath="Name"
                                      SelectedIndex="{Binding Video_EncodeSpeed_SelectedIndex}"
                                      SelectedValue="{Binding Video_EncodeSpeed_SelectedItem, Mode=TwoWay}"
                                      IsEnabled="{Binding Video_EncodeSpeed_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      HorizontalAlignment="Left" 
                                      VerticalAlignment="Top" 
                                      Width="105" 
                                      Height="22"
                                      Grid.Column="2" 
                                      Grid.Row="3"
                                      ToolTipService.InitialShowDelay="1000" 
                                      ToolTipService.ShowOnDisabled="True" 
                                      ToolTip="Encoding Speed. Slower = Better Quality &amp; Compression." Margin="0,2,0,0" 
                                      >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock DataContext="{Binding}">
                                                <TextBlock.Text>
                                                    <Binding Path="Name"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>



                            <!-- HW Acceleration -->
                            <Label 
                                Style="{DynamicResource LabelCustom}" 
                                Content="HW Accel" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"
                                Width="91" 
                                FontFamily="Segoe UI Semilight" 
                                Grid.Row="4
                                " 
                                Height="26" Grid.Column="1" />

                            <ComboBox x:Name="cboHWAccel" 
                                      ItemsSource="{Binding Format_HWAccel_Items}"
                                      SelectedIndex="{Binding Format_HWAccel_SelectedIndex}"
                                      SelectedItem="{Binding Format_HWAccel_SelectedItem, Mode=TwoWay}"
                                      IsEnabled="{Binding Format_HWAccel_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource ComboBoxCustom}"
                                      IsSynchronizedWithCurrentItem="True"
                                      ItemContainerStyle="{DynamicResource ComboBoxCustomItem}"
                                      HorizontalAlignment="Left" 
                                      VerticalAlignment="Top" 
                                      Width="105" 
                                      ToolTipService.InitialShowDelay="1000" 
                                      ToolTipService.ShowOnDisabled="True" 
                                      ToolTip="Hardware Acceleration" 
                                      Grid.Row="4"
                                      Grid.Column="2"
                                      Height="22" 
                                      Margin="0,4,0,0" />


                            <!-- Cut -->
                            <Label 
                                   Style="{DynamicResource LabelCustom}" 
                                   Content="Cut" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   Width="86" 
                                   FontFamily="Segoe UI Semilight" 
                                   Grid.Row="6"
                                   Height="26" 
                                   Grid.Column="1" />

                            <ComboBox x:Name="cboCut" 
                                      ItemsSource="{Binding Format_Cut_Items}"
                                      SelectedIndex="{Binding Format_Cut_SelectedIndex}"
                                      SelectedItem="{Binding Format_Cut_SelectedItem, Mode=TwoWay}"
                                      IsEnabled="{Binding Format_Cut_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource ComboBoxWhite}"
                                      ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}" 
                                      HorizontalAlignment="Left" VerticalAlignment="Top"
                                      Width="105" 
                                      SelectionChanged="cboFormat_Cut_SelectionChanged" 
                                      Grid.Column="2" 
                                      Grid.Row="6" 
                                      Height="22" 
                                      Margin="0,3,0,0" />

                            <!-- Cut Start -->
                            <Label 
                                Style="{DynamicResource LabelCustom}"
                                Content="Start Time"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                Width="86" 
                                FontFamily="Segoe UI Semilight"
                                Grid.Row="7"
                                Height="26" Grid.Column="1" />

                            <TextBox x:Name="tbxCutStart"
                                     Text="{Binding Format_CutStart_Text, Mode=TwoWay}"
                                     IsEnabled="{Binding Format_CutStart_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TextBoxCustom}"
                                     HorizontalAlignment="Left"
                                     Height="22" 
                                     Padding="1, 1, 0, 0" 
                                     TextWrapping="NoWrap"
                                     VerticalAlignment="Top" 
                                     Width="105" 
                                     ToolTipService.InitialShowDelay="1000" 
                                     ToolTipService.ShowOnDisabled="True" 
                                     ToolTip="Start Time (HH:MM:SS.ms)" 
                                     Grid.Column="2" 
                                     Grid.Row="7"
                                     Margin="0,3,0,0"/>

                            <!-- Cut End -->
                            <Label 
                                Style="{DynamicResource LabelCustom}" 
                                Content="End Time" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"
                                Width="86"
                                FontFamily="Segoe UI Semilight" 
                                Grid.Row="8"
                                Height="26" 
                                Grid.Column="1" />

                            <TextBox x:Name="tbxCutEnd"
                                     Text="{Binding Format_CutEnd_Text, Mode=TwoWay}"
                                     IsEnabled="{Binding Format_CutEnd_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TextBoxCustom}" 
                                     HorizontalAlignment="Left" 
                                     Height="22" 
                                     Padding="1, 1, 0, 0" 
                                     TextWrapping="NoWrap" 
                                     VerticalAlignment="Top" 
                                     Width="105"
                                     ToolTipService.InitialShowDelay="1000"
                                     ToolTipService.ShowOnDisabled="True"
                                     ToolTip="End Time (HH:MM:SS.ms)"
                                     Grid.Column="2" 
                                     Grid.Row="8"
                                     Margin="0,3,0,0"/>

                            <!-- Frame Range -->
                            <Label
                                Style="{DynamicResource LabelCustom}"
                                Content="Frame Range"
                                HorizontalAlignment="Left"
                                Margin="0,1,0,0"
                                VerticalAlignment="Top"
                                Width="86"
                                FontFamily="Segoe UI Semilight"
                                Grid.Row="9" 
                                Height="26" 
                                Grid.Column="1" />

                            <TextBox x:Name="tbxFrameStart"
                                     Text="{Binding Format_FrameStart_Text, Mode=TwoWay}"
                                     IsEnabled="{Binding Format_FrameEnd_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TextBoxCustom}"
                                     HorizontalAlignment="Left" 
                                     Height="22" 
                                     Padding="0, 1, 0, 0"
                                     TextWrapping="NoWrap" 
                                     MaxLines="1" 
                                     VerticalAlignment="Top"
                                     Width="50" 
                                     GotFocus="tbxFrameStart_GotFocus" 
                                     LostFocus="tbxFrameStart_LostFocus" 
                                     ToolTipService.InitialShowDelay="1000" 
                                     ToolTipService.ShowOnDisabled="True"
                                     ToolTip="Start Frame" 
                                     Grid.Column="2" 
                                     Grid.Row="9" 
                                     Margin="0,3,0,0" />

                            <TextBox x:Name="tbxFrameEnd"
                                     Text="{Binding Format_FrameEnd_Text, Mode=TwoWay}"
                                     IsEnabled="{Binding Format_FrameEnd_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TextBoxCustom}"
                                     HorizontalAlignment="Left"
                                     Height="22" 
                                     Margin="55,3,0,0" 
                                     Padding="0, 1, 0, 0" 
                                     TextWrapping="NoWrap"
                                     MaxLines="1" 
                                     VerticalAlignment="Top"
                                     Width="50" 
                                     GotFocus="tbxFrameEnd_GotFocus" 
                                     LostFocus="tbxFrameEnd_LostFocus" 
                                     ToolTipService.InitialShowDelay="1000"
                                     ToolTipService.ShowOnDisabled="True"
                                     ToolTip="End Frame" 
                                     Grid.Column="2" 
                                     Grid.Row="9" />


                        </Grid>

                    </ScrollViewer>

                </Grid>
            </TabItem>

            <!-- Video Tab -->
            <TabItem Header="Video"
                     Width="86"
                     Padding="0"
                     Style="{DynamicResource TabItemStyle}" >
                <Grid Background="Transparent">

                    <!-- Scroll Viewer -->
                    <ScrollViewer HorizontalAlignment="Right" 
                                  Width="254"
                                  Template="{DynamicResource ScrollViewerControlTemplate}">

                        <Grid Margin="0,20,0,30"  
                              VerticalAlignment="Top" >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="96"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                            </Grid.RowDefinitions>

                            <!-- Video Codec -->
                            <Label Style="{DynamicResource LabelCustom}"
                                   Content="Video Codec" 
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,0" 
                                   VerticalAlignment="Top" 
                                   Width="75" 
                                   FontFamily="Segoe UI Semilight" 
                                   Grid.Row="0" 
                                   Height="26" 
                                   Grid.Column="1" />
                            <ComboBox x:Name="cboVideoCodec" 
                                      Style="{DynamicResource ComboBoxWhite}"
                                      ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}" 
                                      ItemsSource="{Binding Video_Codec_Items}"
                                      SelectedIndex="{Binding Video_Codec_SelectedIndex}"
                                      SelectedItem="{Binding Video_Codec_SelectedItem}"
                                      IsEnabled="{Binding Video_Codec_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsSynchronizedWithCurrentItem="True"
                                      HorizontalAlignment="Left" 
                                      VerticalAlignment="Top" 
                                      Width="105" 
                                      Height="22"
                                      SelectionChanged="cboVideo_Codec_SelectionChanged" 
                                      Grid.Row="0"
                                      Grid.Column="2" 
                                      Margin="0,2,0,0" />

                            <!-- Video Quality -->
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="Quality" 
                                   HorizontalAlignment="Left"
                                   Width="56"  
                                   FontFamily="Segoe UI Semilight"
                                   Margin="0,0,0,4"
                                   Grid.Row="2"
                                   Grid.Column="1" />
                            <ComboBox x:Name="cboVideoQuality" 
                                      Style="{DynamicResource ComboBoxWhite}"
                                      ItemContainerStyle="{DynamicResource ComboBoxWhiteItem}" 
                                      ItemsSource="{Binding Video_Quality_Items}"
                                      SelectedValuePath="Name"
                                      SelectedIndex="{Binding Video_Quality_SelectedIndex}"
                                      SelectedValue="{Binding Video_Quality_SelectedItem, Mode=TwoWay}"
                                      IsEnabled="{Binding Video_Quality_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsSynchronizedWithCurrentItem="True"
                                      HorizontalAlignment="Left" 
                                      VerticalAlignment="Top" 
                                      Width="105" 
                                      Height="22"
                                      SelectionChanged="cboVideo_Quality_SelectionChanged" 
                                      Grid.Column="2" 
                                      Grid.Row="2" 
                                      Margin="0,2,0,0"
                                      >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock DataContext="{Binding}">
                                                <TextBlock.Text>
                                                    <Binding Path="Name"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <!-- Pass -->
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="Pass" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   Width="56"
                                   ToolTip="Encoding Pass Method"
                                   FontFamily="Segoe UI Semilight" 
                                   Grid.Row="3" 
                                   Grid.Column="1" />

                            <ComboBox x:Name="cboPass"
                                      ItemsSource="{Binding Video_Pass_Items}"
                                      SelectedIndex="{Binding Video_Pass_SelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValue="{Binding Video_Pass_SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="{Binding Video_Pass_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource ComboBoxCustom}"
                                      ItemContainerStyle="{DynamicResource ComboBoxCustomItem}"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Width="105" 
                                      ToolTipService.InitialShowDelay="1000" 
                                      ToolTipService.ShowOnDisabled="True"
                                      ToolTip="Encoding Pass Method" 
                                      SelectionChanged="cboVideo_Pass_SelectionChanged"
                                      DropDownClosed="cboVideo_Pass_DropDownClosed" 
                                      Grid.Row="3" 
                                      Grid.Column="2" 
                                      Margin="0,2,0,0" />

                            <!-- CRF -->
                            <Label Style="{DynamicResource LabelCustom}" 
                                   Content="CRF" 
