    <SolidColorBrush x:Key="Button.GenericSmall.Static.Border" Color="#FFFFFFFF"/>
    <ImageBrush x:Key="Button.GenericSmall.MouseOver.Background" ImageSource="Resources/Images/ToggleButtonGenericSmallMouseOver.png"/>
    <ImageBrush x:Key="Button.GenericSmall.MouseOverUnchecked.Background" ImageSource="Resources/Images/ToggleButtonGenericSmallMouseOver-Unchecked.png"/>
    <SolidColorBrush x:Key="Button.GenericSmall.MouseOver.Border" Color="#FF7EB4EA"/>
    <SolidColorBrush x:Key="Button.GenericSmall.Pressed.Background" Color="#FFC4E5F6"/>
    <SolidColorBrush x:Key="Button.GenericSmall.Pressed.Border" Color="#FF2C628B"/>
    <ImageBrush x:Key="Button.GenericSmall.Disabled.Background" ImageSource="Resources/Images/ToggleButtonGenericSmallDisabled.png"/>
    <SolidColorBrush x:Key="Button.GenericSmall.Disabled.Border" Color="#FF002371"/>
