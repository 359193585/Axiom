    <Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Axiom.Configure"
        Title="Configure" Height="200" Width="450" Foreground="Black" Icon="Resources/Images/configure.ico"
        ResizeMode="CanMinimize" UseLayoutRounding="True">
    <Window.Background>
        <ImageBrush ImageSource="Resources/Images/config-background.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid >
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>

        <!-- WinRAR Revert Button -->

        <!-- FFmpeg Path TextBox -->
        <Label x:Name="labelFFmpegPath" Content="FFmpeg Path" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" Height="26" Foreground="White" ToolTip="Path to FFmpeg.exe"/>
        <TextBox x:Name="textBoxFFmpegPathConfig" HorizontalAlignment="Left" Height="20" Margin="95,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="297" IsReadOnly="True" PreviewMouseDown="textBoxFFmpegPathConfig_PreviewMouseDown" TextChanged="textBoxFFmpegPathConfig_TextChanged" Foreground="White" ToolTip="Path to FFmpeg.exe">
            <TextBox.Background>
                <ImageBrush ImageSource="Resources/Images/BrowseTextBox.png" Stretch="None" AlignmentX="Left" AlignmentY="Bottom" />
            </TextBox.Background>
        </TextBox>

        <!-- FFprobe Path TextBox -->
        <Label x:Name="labelFFprobePath" Content="FFprobe Path" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Height="26" Foreground="White" ToolTip="Path to FFmpeg.exe"/>
        <TextBox x:Name="textBoxFFprobePathConfig" HorizontalAlignment="Left" Height="20" Margin="95,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="297" IsReadOnly="True" PreviewMouseDown="textBoxFFprobePathConfig_PreviewMouseDown" TextChanged="textBoxFFprobePathConfig_TextChanged" Foreground="White" ToolTip="Path to FFprobe.exe">
            <TextBox.Background>
                <ImageBrush ImageSource="Resources/Images/BrowseTextBox.png" Stretch="None" AlignmentX="Left" AlignmentY="Bottom" />
            </TextBox.Background>
        </TextBox>


        <!-- FFmpeg Path Revert Button -->
        <Button x:Name="buttonFFmpegAuto" HorizontalAlignment="Left" Margin="397,13,0,0" VerticalAlignment="Top" Width="23" Foreground="White" BorderThickness="0" Height="23" Cursor="Hand" ToolTip="Revert to Auto" Click="buttonFFmpegAuto_Click" Background="{x:Null}" Style="{StaticResource ButtonBlue}">
            <Image Source="Resources/Images/revertarrow.png" Width="9" Height="11" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,0,0,0"/>
        </Button>

        <!-- Log Path TextBox -->
        <Label x:Name="labelLogConfig" Content="Log Path" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" Height="26" Foreground="White" ToolTip="Path to Save Log"/>
        <TextBox x:Name="textBoxLogConfig" HorizontalAlignment="Left" Height="20" Margin="95,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="297" IsReadOnly="True" PreviewMouseDown="textBoxLogConfig_PreviewMouseDown" Foreground="White" ToolTipService.ShowOnDisabled="True" ToolTip="Path to save output log." IsEnabled="{Binding IsChecked, ElementName=checkBoxLogConfig}">
            <TextBox.Background>
                <ImageBrush ImageSource="Resources/Images/BrowseTextBox.png" Stretch="None" AlignmentX="Left" AlignmentY="Bottom" />
            </TextBox.Background>
        </TextBox>

        <!-- Log Revert Button -->
        <Button x:Name="buttonLogAuto" HorizontalAlignment="Left" Margin="397,83,0,0" VerticalAlignment="Top" Width="23" Foreground="White" BorderThickness="0" Height="23" Cursor="Hand" ToolTip="Clear Path" Click="buttonLogAuto_Click" Background="{x:Null}" Style="{StaticResource ButtonBlue}">
            <Image Source="Resources/Images/revertarrow.png" Width="9" Height="11" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,0,0,0"/>
        </Button>

        <!-- Log Enable/Disable Checkbox -->
        <CheckBox x:Name="checkBoxLogConfig" Content="" HorizontalAlignment="Left" Margin="69,88,0,0" VerticalAlignment="Top" ToolTip="Enable/Disable Log" Checked="checkBoxLogConfig_Checked" Unchecked="checkBoxLogConfig_Unchecked"/>


        <!-- Reset Saved Settigns Button -->
        <Button x:Name="buttonClearAllSavedSettings" HorizontalAlignment="Left" Margin="332,120,0,0" VerticalAlignment="Top" Width="60" Background="{x:Null}" Foreground="White" BorderBrush="White" Height="23" ToolTip="Reset the Saved Settings to Default." Cursor="Hand" Click="buttonClearAllSavedSettings_Click" Style="{StaticResource ButtonBlue}">
            <TextBlock Text="Reset" Margin="0,-1,0,0"/>
        </Button>
        <Button x:Name="buttonFFprobeAuto" HorizontalAlignment="Left" Margin="397,48,0,0" VerticalAlignment="Top" Width="23" Foreground="White" BorderThickness="0" Height="23" Cursor="Hand" ToolTip="Revert to Auto" Click="buttonFFprobeAuto_Click" Background="{x:Null}" Style="{StaticResource ButtonBlue}">
            <Image Source="Resources/Images/revertarrow.png" Width="9" Height="11" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,0,0,0"/>
        </Button>
        <ComboBox x:Name="cboThreads" Style="{StaticResource ComboBoxBlue}" HorizontalAlignment="Left" Margin="95,120,0,0" VerticalAlignment="Top" Width="60" IsTextSearchEnabled="False" SelectionChanged="threadSelect_SelectionChanged" KeyDown="threadSelect_KeyDown">
            <System:String>off</System:String>
            <System:String>all</System:String>
            <System:String>1</System:String>
            <System:String>2</System:String>
            <System:String>3</System:String>
            <System:String>4</System:String>
            <System:String>5</System:String>
            <System:String>6</System:String>
            <System:String>7</System:String>
            <System:String>8</System:String>
            <!-- <System:String>Custom</System:String> -->
        </ComboBox>
        <Label x:Name="labelLogConfig_Copy" Content="CPU Threads" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top" Height="26" Foreground="White" ToolTip="Path to Save Log"/>

        <!-- Delete Saved Settigns Button -->
        <Button x:Name="buttonDeleteSettings" HorizontalAlignment="Left" Margin="267,120,0,0" VerticalAlignment="Top" Width="60" Background="{x:Null}" Foreground="White" BorderBrush="White" Height="23" ToolTip="Delete the Settings File in AppData." Cursor="Hand" Style="{StaticResource ButtonBlue}" Click="buttonDeleteSettings_Click">
            <TextBlock Text="Delete" Margin="0,-1,0,0"/>
        </Button>
        <Label x:Name="labelSavedSettings" Content="Saved Settings" HorizontalAlignment="Left" Margin="174,118,0,0" VerticalAlignment="Top" Height="26" Foreground="White" ToolTip="Path to Save Log"/>

    </Grid>
</Window>
